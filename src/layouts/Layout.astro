---
import Footer from "@/components/ui/Footer.astro";
import Header from "@/components/ui/header/Header.astro";
import { locales } from "@/i18n/config";
import { localizeHref } from "@/i18n/utils";
import "@/styles/external-links.css";
import "@/styles/global.css";
import "@/styles/moneropedia-link.css";

import "@fontsource-variable/dm-sans";
import dmSansFont from "@fontsource-variable/dm-sans/files/dm-sans-latin-wght-normal.woff2?url";
import { SEO } from "astro-seo";

const { t, locale, dir } = Astro.locals;

interface Props {
  title: string;
  description: string;
  openGraph?: {
    basic?: {
      title?: string;
      type: string;
      image: string;
    };
    image?: {
      alt: string;
    };
    article?: {
      publishedTime: string;
      authors: string[];
      tags: string[];
    };
  };
}

const { title, description, openGraph } = Astro.props;
const fullTitle = title.includes("|")
  ? title
  : `${title} | ${t("common:site.titleSuffix")}`;
---

<!doctype html>
<html lang={locale} dir={dir}>
  <head>
    <SEO
      title={fullTitle}
      description={description}
      charset="UTF-8"
      openGraph={{
        basic: {
          title: openGraph?.basic?.title ?? title,
          type: openGraph?.basic?.type ?? "website",
          image: openGraph?.basic?.image ?? "/open-graph/default.png",
        },
        optional: {
          locale: locale,
          localeAlternate: Object.keys(locales).filter(
            (item) => item !== locale,
          ),
          siteName: "Monero",
        },
        image: {
          alt: openGraph?.image?.alt ?? undefined,
        },
        article: {
          publishedTime: openGraph?.article?.publishedTime ?? undefined,
          authors: openGraph?.article?.authors ?? undefined,
          tags: openGraph?.article?.tags ?? undefined,
        },
      }}
      languageAlternates={Object.keys(locales).map((lang) => ({
        hrefLang: lang,
        href: new URL(
          localizeHref(lang, Astro.url.pathname),
          Astro.site,
        ).toString(),
      }))}
      twitter={{
        card: "summary_large_image",
        site: "@monero",
        title: fullTitle,
        description: description,
      }}
      extend={{
        link: [
          {
            rel: "preload",
            as: "font",
            type: "font/woff2",
            href: dmSansFont,
            crossorigin: "anonymous",
          },
          { rel: "icon", href: "/meta/favicon-16x16.png", sizes: "16x16" },
          { rel: "icon", href: "/meta/favicon-32x32.png", sizes: "32x32" },
          {
            rel: "sitemap",
            type: "application/xml",
            href: "/sitemap-index.xml",
          },
        ],

        meta: [
          {
            name: "viewport",
            content: "width=device-width, initial-scale=1",
          },
          {
            name: "generator",
            content: Astro.generator,
          },
        ],
      }}
    />
    <slot name="head" />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    min-height: 100vh;
    font-family: "DM Sans Variable", sans-serif;
    background: var(--bg-color);
    color: var(--text-primary);
    display: flex;
    flex-direction: column;
  }

  main {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
    padding: var(--page-top-margin) var(--mobile-padding-inline)
      var(--space-2xl);
    margin: var(--page-top-margin) auto 0;
    width: 100%;
    max-width: var(--content-max-width);
    flex: 1 0 auto;
    box-sizing: border-box;
  }

  @media (width >= 1200px) {
    main {
      padding-inline: var(--desktop-padding-inline);
    }
  }
</style>
