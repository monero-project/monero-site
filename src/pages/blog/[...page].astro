---
import { getCollection } from "astro:content";

import Layout from "@/layouts/Layout.astro";

import BlogCard from "@/components/pages/blog/BlogCard.astro";
import Row from "@/components/ui/layout/Row.astro";
import Grid from "@/components/ui/layout/Grid.astro";
import MaskIcon from "@/components/ui/icons/MaskIcon.astro";
import PageContainer from "@/components/ui/layout/PageContainer.astro";
import PageTabs from "@/components/ui/tabs/PageTabs.astro";
import Paginator from "@/components/ui/Paginator.astro";
import TitleCard from "@/components/ui/TitleCard.astro";

import type { GetStaticPaths, Page } from "astro";
import type { CollectionEntry } from "astro:content";
import { icons } from "@/utils/icons";

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const allPosts = (await getCollection("blog")).sort((a, b) =>
    b.id.localeCompare(a.id),
  );
  return paginate(allPosts, { pageSize: 6 });
};

interface Props {
  page: Page<CollectionEntry<"blog">>;
}

const { page } = Astro.props;
const posts = page.data;

const { t, dir, localizeHref } = Astro.locals;

const tabs = [
  { label: t("blog:tabs.allPosts"), link: "/blog" },
  { label: t("blog:tagLabels.urgent"), link: "/blog/tags/urgent" },
  { label: t("blog:tagLabels.releases"), link: "/blog/tags/releases" },
  { label: t("blog:tagLabels.community"), link: "/blog/tags/community" },
];
---

<Layout
  title={t("blog:index.pageTitle")}
  description={t("blog:index.hero.subtitle")}
>
  <Fragment slot="head">
    <link
      rel="alternate"
      type="application/rss+xml"
      title={t("blog:rssTitle")}
      href={new URL("feed.xml", Astro.site)}
    />
  </Fragment>
  <TitleCard
    title={t("blog:index.hero.title")}
    subtitle={t("blog:index.hero.subtitle")}
  />
  <PageContainer>
    <Row justify="between" align="center" wrap={false} class="tabs-bar">
      <PageTabs
        labels={tabs.map((tab) => tab.label)}
        links={tabs.map((tab) => localizeHref(tab.link))}
        activeIndex={0}
      />
      <a
        class="rss-icon"
        href={new URL("feed.xml", Astro.site)}
        aria-label={t("blog:aria.rssFeed")}
        title={t("blog:aria.rssFeed")}
      >
        <MaskIcon src={icons.mask("rss")} size="2.5rem" rtl={dir == "rtl"} />
      </a>
    </Row>
    <Grid columns={2} gap="md" class="blog-grid">
      {
        posts.map((post) => (
          <BlogCard
            id={post.id}
            title={post.data.title}
            author={post.data.author}
            tags={post.data.tags || []}
            image={post.data.image}
            summary={post.data.summary || ""}
          />
        ))
      }
    </Grid>
    <Paginator page={page} />
  </PageContainer>
</Layout>

<style>
  .blog-grid {
    grid-template-columns: 1fr;
  }

  .tabs-bar {
    margin-bottom: var(--space-2xl);

    & :global(.tab-header) {
      margin-bottom: unset;
    }
  }

  .rss-icon {
    display: none;
  }

  @media (width >= 1200px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .rss-icon {
      display: inline-flex;
      align-items: center;
      color: var(--monero-orange);

      &:hover {
        opacity: 0.8;
      }
    }
  }
</style>
