---
import { createTInstance, getLocale, localizeHref } from "@/i18n/utils";
import { getCollection } from "astro:content";

import Layout from "@/layouts/Layout.astro";

import BlogCard from "@/components/pages/blog/BlogCard.astro";
import Paginator from "@/components/ui/Paginator.astro";
import Tabs from "@/components/ui/Tabs.astro";
import TitleCard from "@/components/ui/TitleCard.astro";

import type { GetStaticPaths, Page } from "astro";
import type { CollectionEntry } from "astro:content";

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const allPosts = (await getCollection("blog")).sort((a, b) =>
    b.id.localeCompare(a.id),
  );
  return paginate(allPosts, { pageSize: 6 });
};

interface Props {
  page: Page<CollectionEntry<"blog">>;
}

const { page } = Astro.props;
const posts = page.data;

const locale = getLocale(Astro.url);
const t = await createTInstance(locale);

const tabs = [
  { label: t("blog.tabs.allPosts"), link: localizeHref(locale, "/blog") },
  {
    label: t("blog.tabs.urgent"),
    link: localizeHref(locale, "/blog/tags/urgent"),
  },
  {
    label: t("blog.tabs.releases"),
    link: localizeHref(locale, "/blog/tags/releases"),
  },
  {
    label: t("blog.tabs.community"),
    link: localizeHref(locale, "/blog/tags/community"),
  },
  {
    label: t("blog.tabs.meetingLogs"),
    link: localizeHref(locale, "/blog/tags/dev-diaries"),
  },
];
---

<Layout
  title={t("blog.index.pageTitle")}
  description={t("blog.index.heroSubtitle")}
>
  <TitleCard
    title={t("blog.index.heroTitle")}
    subtitle={t("blog.index.heroSubtitle")}
  />
  <Tabs
    labels={tabs.map((t) => t.label)}
    links={tabs.map((t) => t.link)}
    activeIndex={0}
  />
  <div class="blog-grid">
    {
      posts.map((post) => (
        <BlogCard
          id={post.id}
          title={post.data.title}
          author={post.data.author}
          tags={post.data.tags || []}
          image={post.data.image}
          summary={post.data.summary}
          locale={locale}
          t={t}
        />
      ))
    }
  </div>
  <Paginator page={page} locale={locale} />
</Layout>

<style>
  .blog-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  @media (min-width: 1200px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
