---
import BlogCard from "@/components/pages/blog/BlogCard.astro";
import Paginator from "@/components/ui/Paginator.astro";
import Tabs from "@/components/ui/Tabs.astro";
import TitleCard from "@/components/ui/TitleCard.astro";
import { createTInstance, getLocale, localizeHref } from "@/i18n/utils";
import Layout from "@/layouts/Layout.astro";
import type { GetStaticPaths, Page } from "astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const allPosts = (await getCollection("blog")).sort((a, b) =>
    b.id.localeCompare(a.id),
  );

  const tagSet = [...new Set(allPosts.flatMap((post) => post.data.tags ?? []))];

  return tagSet.flatMap((tag) => {
    const filteredPosts = allPosts.filter((post) =>
      post.data.tags ? post.data.tags.includes(tag) : false,
    );

    return paginate(filteredPosts, {
      pageSize: 6,
      params: { tag: tag.toLowerCase().replace(/\s+/g, "-") },
    });
  });
};

interface Props {
  page: Page<CollectionEntry<"blog">>;
}

const { tag } = Astro.params;
const { page } = Astro.props;
const posts = page.data;
const sanitizedTag = String(tag).replace(/-/g, " ");
const pathname = Astro.url.pathname;

const locale = getLocale(Astro.url);
const t = await createTInstance(locale);

const tabs = [
  { label: t("blog.tabs.allPosts"), link: "/blog" },
  {
    label: t("blog.tabs.urgent"),
    link: "/blog/tags/urgent",
  },
  {
    label: t("blog.tabs.releases"),
    link: "/blog/tags/releases",
  },
  {
    label: t("blog.tabs.community"),
    link: "/blog/tags/community",
  },
  {
    label: t("blog.tabs.meetingLogs"),
    link: "/blog/tags/dev-diaries",
  },
];

let activeTab = tabs.findIndex((tab, index) => {
  const localizedLink = localizeHref(locale, tab.link);
  if (index === 0) {
    return pathname === localizedLink;
  }
  return pathname.startsWith(localizedLink);
});

const isMainTab = tabs.some(
  (tab) => pathname == localizeHref(locale, tab.link),
);
const titleKey = isMainTab ? "blog.index.heroTitle" : "blog.tags.heroTitle";
---

<Layout
  title={isMainTab
    ? t("blog.index.pageTitle")
    : t("blog.tags.pageTitle", { tag: sanitizedTag })}
  description={isMainTab
    ? t("blog.index.heroSubtitle")
    : t("blog.tags.heroSubtitle", { tag: sanitizedTag })}
>
  <TitleCard
    title={t(titleKey, { tag: sanitizedTag })}
    subtitle={t("blog.tags.heroSubtitle", { tag: sanitizedTag })}
  />
  <Tabs
    labels={tabs.map((t) => t.label)}
    links={tabs.map((t) => localizeHref(locale, t.link))}
    activeIndex={activeTab}
  />
  <div class="blog-grid">
    {
      posts.map((post) => (
        <BlogCard
          id={post.id}
          title={post.data.title}
          author={post.data.author}
          tags={post.data.tags || []}
          image={post.data.image}
          summary={post.data.summary}
          locale={locale}
          t={t}
        />
      ))
    }
  </div>
  <Paginator page={page} locale={locale} />
</Layout>

<style>
  .blog-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-top: 2rem;
  }

  @media (min-width: 1200px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
