---
import BlogCard from "@/components/pages/blog/BlogCard.astro";
import PageContainer from "@/components/ui/PageContainer.astro";
import PageTabs from "@/components/ui/PageTabs.astro";
import Paginator from "@/components/ui/Paginator.astro";
import TitleCard from "@/components/ui/TitleCard.astro";
import {
  createTInstance,
  getDirection,
  getLocale,
  localizeHref,
} from "@/i18n/utils";
import Layout from "@/layouts/Layout.astro";
import type { GetStaticPaths, Page } from "astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";

import rssIcon from "@/assets/icons/mask/rss.avif";
import MaskIcon from "@/components/ui/MaskIcon.astro";

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const allPosts = (await getCollection("blog")).sort((a, b) =>
    b.id.localeCompare(a.id),
  );

  const tagSet = [...new Set(allPosts.flatMap((post) => post.data.tags ?? []))];

  return tagSet.flatMap((tag) => {
    const filteredPosts = allPosts.filter((post) =>
      post.data.tags ? post.data.tags.includes(tag) : false,
    );

    return paginate(filteredPosts, {
      pageSize: 6,
      params: { tag: tag.toLowerCase().replace(/\s+/g, "-") },
    });
  });
};

interface Props {
  page: Page<CollectionEntry<"blog">>;
}

const { tag } = Astro.params;
const { page } = Astro.props;
const posts = page.data;
const sanitizedTag = String(tag).replace(/-/g, " ");
const pathname = Astro.url.pathname;

const locale = getLocale(Astro.url);
const t = await createTInstance(locale);
const dir = getDirection(locale);
const translatedTag = t(`blog:tagLabels.${sanitizedTag}`, {
  defaultValue: sanitizedTag,
});

const tabs = [
  { label: t("blog:tabs.allPosts"), link: "/blog" },
  { label: t("blog:tagLabels.urgent"), link: "/blog/tags/urgent" },
  { label: t("blog:tagLabels.releases"), link: "/blog/tags/releases" },
  { label: t("blog:tagLabels.community"), link: "/blog/tags/community" },
];

let activeTab = tabs.findIndex((tab, index) => {
  const localizedLink = localizeHref(locale, tab.link);
  if (index === 0) {
    return pathname === localizedLink;
  }
  return pathname.startsWith(localizedLink);
});

const isMainTab = tabs.some(
  (tab) => pathname == localizeHref(locale, tab.link),
);
const titleKey = isMainTab ? "blog:index.hero.title" : "blog:tags.hero.title";
---

<Layout
  title={isMainTab
    ? t("blog:index.pageTitle")
    : t("blog:tags.pageTitle", { tag: translatedTag })}
  description={isMainTab
    ? t("blog:index.hero.subtitle")
    : t("blog:tags.hero.subtitle", { tag: translatedTag })}
>
  <Fragment slot="head">
    <link
      rel="alternate"
      type="application/rss+xml"
      title={t("blog:rssTitle")}
      href={new URL("feed.xml", Astro.site)}
    />
  </Fragment>
  <TitleCard
    title={t(titleKey, { tag: translatedTag })}
    subtitle={t("blog:tags.hero.subtitle", { tag: translatedTag })}
  />
  <PageContainer>
    <div class="tabs-bar">
      <PageTabs
        labels={tabs.map((tab) => tab.label)}
        links={tabs.map((tab) => localizeHref(locale, tab.link))}
        activeIndex={activeTab}
        t={t}
      />
      <a
        class="rss-icon"
        href={new URL("feed.xml", Astro.site)}
        aria-label={t("blog:aria.rssFeed")}
        title="RSS Feed"
      >
        <MaskIcon src={rssIcon} size="2.5rem" rtl={dir == "rtl"} />
      </a>
    </div>
    <div class="blog-grid">
      {
        posts.map((post) => (
          <BlogCard
            id={post.id}
            title={post.data.title}
            author={post.data.author}
            tags={post.data.tags || []}
            image={post.data.image}
            summary={post.data.summary || ""}
            locale={locale}
            t={t}
          />
        ))
      }
    </div>
    <Paginator page={page} locale={locale} t={t} />
  </PageContainer>
</Layout>

<style>
  .blog-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-top: 2rem;
  }

  .tabs-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 2rem;
  }

  .tabs-bar :global(.tab-header) {
    margin-bottom: unset;
  }

  .rss-icon {
    display: none;
  }

  @media (min-width: 1200px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .rss-icon {
      display: inline-flex;
      align-items: center;
      color: var(--monero-orange);
    }
    .rss-icon:hover {
      opacity: 0.8;
    }
  }
</style>
