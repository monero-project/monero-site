---
import {
  createTInstance,
  getLocale,
  localizeHref,
  localizeNumber,
} from "@/i18n/utils";
import Layout from "@/layouts/Layout.astro";

const locale = getLocale(Astro.url);
const t = await createTInstance(locale);
---

<Layout
  title={t("common:notFound.pageTitle")}
  description={t("common:notFound.pageDescription")}
>
  <div class="error-container">
    <div class="error-content">
      <h1 class="error-code">{localizeNumber(locale, 404)}</h1>
      <h2 class="error-title">{t("common:notFound.title")}</h2>
      <p class="error-message">{t("common:notFound.message")}</p>

      <nav class="quick-links">
        <a href={localizeHref(locale, "/")}>{t("common:notFound.links.home")}</a
        >
        <a href={localizeHref(locale, "/get-started/what-is-monero/")}
          >{t("common:notFound.links.whatIsMonero")}</a
        >
        <a href={localizeHref(locale, "/downloads/")}
          >{t("common:notFound.links.downloads")}</a
        >
        <a href={localizeHref(locale, "/get-started/faq/")}
          >{t("common:notFound.links.faq")}</a
        >
        <a href={localizeHref(locale, "/community/hangouts/")}
          >{t("common:notFound.links.community")}</a
        >
      </nav>
    </div>
  </div>
</Layout>

<style>
  .error-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: calc(100svh - (var(--page-top-margin) * 2) - 4.5rem);
    flex: 1;
  }

  .error-content {
    text-align: center;
    max-width: 75ch;
    width: 100%;
  }

  .error-code {
    font-size: clamp(6rem, 15vw, 10rem);
    font-weight: var(--font-weight-extra-bold);
    color: var(--monero-orange);
    line-height: 1;
    margin: 0;
  }

  .error-title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    color: var(--heading-color);
    margin-block: 1rem;
  }

  .error-message {
    font-size: var(--font-size-lg);
    color: var(--paragraph-main);
    line-height: var(--line-height-body);
    margin-block: 2rem;
  }

  .quick-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem 1.5rem;
    margin-top: 1rem;
  }

  .quick-links a {
    font-weight: var(--font-weight-semibold);
  }

  @media (min-width: 600px) {
    .error-container {
      min-height: unset;
    }
  }
</style>
