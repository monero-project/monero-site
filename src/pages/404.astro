---
import Layout from "@/layouts/Layout.astro";

const { t, localizeHref, localizeNumber } = Astro.locals;
---

<Layout
  title={t("common:notFound.pageTitle")}
  description={t("common:notFound.pageDescription")}
>
  <div class="error-container">
    <div class="error-content">
      <h1 class="error-code">{localizeNumber(404)}</h1>
      <h2 class="error-title">{t("common:notFound.title")}</h2>
      <p class="error-message">{t("common:notFound.message")}</p>

      <nav class="quick-links">
        <a href={localizeHref("/")}>{t("common:notFound.links.home")}</a>
        <a href={localizeHref("/get-started/what-is-monero/")}
          >{t("common:notFound.links.whatIsMonero")}</a
        >
        <a href={localizeHref("/downloads/")}
          >{t("common:notFound.links.downloads")}</a
        >
        <a href={localizeHref("/get-started/faq/")}
          >{t("common:notFound.links.faq")}</a
        >
        <a href={localizeHref("/community/hangouts/")}
          >{t("common:notFound.links.community")}</a
        >
      </nav>
    </div>
  </div>
</Layout>

<style>
  .error-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: calc(100svh - (var(--page-top-margin) * 2) - 4.5rem);
    flex: 1;
  }

  .error-content {
    text-align: center;
    max-width: 75ch;
    width: 100%;
    margin-bottom: 9rem; /* move the content up by the height of the header */
  }

  .error-code {
    font-size: clamp(6rem, 15vw, 10rem);
    font-weight: var(--font-weight-extra-bold);
    color: var(--monero-orange);
    line-height: 1;
    margin: 0;
  }

  .error-title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    color: var(--heading-color);
    margin-block: var(--space-md);
  }

  .error-message {
    font-size: var(--font-size-lg);
    color: var(--paragraph-main);
    line-height: var(--line-height-body);
    margin-block: var(--space-2xl);
  }

  .quick-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-md) var(--space-xl);
    margin-top: var(--space-md);
  }

  .quick-links a {
    font-weight: var(--font-weight-semibold);
  }

  @media (width >= 600px) {
    .error-container {
      min-height: calc(
        100vh - (var(--page-top-margin) * 5)
      ); /* makes the footer be offscreen */
    }
  }
</style>
