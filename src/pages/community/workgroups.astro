---
import WorkgroupCard from "@/components/pages/workgroups/WorkgroupCard.astro";
import Button from "@/components/ui/Button.astro";
import HeroCard from "@/components/ui/HeroCard.astro";
import InternalResourceButton from "@/components/ui/InternalResourceButton.astro";
import MaskIcon from "@/components/ui/MaskIcon.astro";
import PageContainer from "@/components/ui/PageContainer.astro";
import PageSection from "@/components/ui/PageSection.astro";
import TitleCard from "@/components/ui/TitleCard.astro";
import {
  createTInstance,
  getDirection,
  getLocale,
  localizeHref,
} from "@/i18n/utils";
import Layout from "@/layouts/Layout.astro";

import communityLogo from "@/assets/images/community-logo.avif";

import externalLinkIcon from "@/assets/icons/mask/external-link.avif";
import hashtagIcon from "@/assets/icons/mask/hashtag.avif";
import messageCircleIcon from "@/assets/icons/mask/messageCircle.avif";

import {
  communityWorkgroups,
  developmentWorkgroups,
  researchWorkgroups,
} from "@/data/workgroups";

const locale = getLocale(Astro.url);
const t = await createTInstance(locale);
const dir = getDirection(locale);
---

<Layout
  title={t("workgroups:pageTitle")}
  description={t("workgroups:description")}
>
  <TitleCard
    title={t("workgroups:hero.title")}
    subtitle={t("workgroups:hero.subtitle")}
  />

  <PageContainer>
    <InternalResourceButton
      icon={messageCircleIcon}
      title={t("workgroups:hangoutsNote.title")}
      href={localizeHref(locale, "/community/hangouts")}
    >
      {t("workgroups:hangoutsNote.content")}
    </InternalResourceButton>
    <HeroCard
      image={communityLogo}
      imageAlt="Monero Community"
      title={t("workgroups:getStarted.communityWorkgroup.name")}
      lead={t("workgroups:getStarted.communityWorkgroup.lead")}
      description={t("workgroups:getStarted.communityWorkgroup.description")}
    >
      <Button
        href="https://matrix.to/#/#monero-community:monero.social"
        as="a"
        target="_blank"
        rel="noopener noreferrer"
      >
        {t("workgroups:getStarted.communityWorkgroup.cta")}
        <MaskIcon src={externalLinkIcon} size="1em" rtl={dir === "rtl"} />
      </Button>
      <Button
        as="a"
        href="https://web.libera.chat/#monero-community"
        target="_blank"
        rel="noopener noreferrer"
        variant="secondary"
      >
        <MaskIcon src={hashtagIcon} size="0.9em" />
        IRC
      </Button>
    </HeroCard>

    <hr aria-hidden="true" />

    <div class="workgroup-columns">
      <!-- Development Column -->
      <PageSection
        title={t("workgroups:columns.development.title")}
        subtitle={t("workgroups:columns.development.subtitle")}
        headingLevel={3}
      >
        <div class="column-cards">
          {
            developmentWorkgroups.map((wg) => (
              <WorkgroupCard
                name={t(wg.nameKey)}
                action={t(wg.actionKey)}
                bestFor={t(wg.bestForKey)}
                icon={wg.icon}
                chatName={wg.chatName}
                ircHref={wg.ircHref}
                matrixHref={wg.matrixHref}
                t={t}
              />
            ))
          }
        </div>
      </PageSection>

      <!-- Research Column -->
      <PageSection
        title={t("workgroups:columns.research.title")}
        subtitle={t("workgroups:columns.research.subtitle")}
        headingLevel={3}
      >
        <div class="column-cards">
          {
            researchWorkgroups.map((wg) => (
              <WorkgroupCard
                name={t(wg.nameKey)}
                action={t(wg.actionKey)}
                bestFor={t(wg.bestForKey)}
                icon={wg.icon}
                chatName={wg.chatName}
                ircHref={wg.ircHref}
                matrixHref={wg.matrixHref}
                t={t}
              />
            ))
          }
        </div>
      </PageSection>

      <!-- Community Column -->
      <PageSection
        title={t("workgroups:columns.community.title")}
        subtitle={t("workgroups:columns.community.subtitle")}
        headingLevel={3}
      >
        <div class="column-cards">
          {
            communityWorkgroups.map((wg) => (
              <WorkgroupCard
                name={t(wg.nameKey)}
                action={t(wg.actionKey)}
                bestFor={t(wg.bestForKey)}
                icon={wg.icon}
                chatName={wg.chatName}
                ircHref={wg.ircHref}
                matrixHref={wg.matrixHref}
                t={t}
              />
            ))
          }
        </div>
      </PageSection>
    </div>
  </PageContainer>
</Layout>

<style>
  /* Three Columns */
  .workgroup-columns {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    align-items: start;
  }

  .column-cards {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  @media (max-width: 1200px) {
    .workgroup-columns {
      grid-template-columns: 1fr 1fr;
    }

    .workgroup-columns > :last-child {
      grid-column: span 2;
    }

    .workgroup-columns > :last-child .column-cards {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 900px) {
    .workgroup-columns {
      grid-template-columns: 1fr;
    }

    .workgroup-columns > :last-child {
      grid-column: auto;
    }

    .workgroup-columns > :last-child .column-cards {
      grid-template-columns: 1fr;
    }
  }
</style>
