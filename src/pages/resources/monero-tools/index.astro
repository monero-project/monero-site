---
import CategoryCard from "@/components/ui/CategoryCard.astro";
import PageContainer from "@/components/ui/PageContainer.astro";
import TitleCard from "@/components/ui/TitleCard.astro";
import { acceptCount, developCount, exploreCount } from "@/data/monero-tools";
import { getDirection, getLocale, localizeHref } from "@/i18n/utils";
import Layout from "@/layouts/Layout.astro";

const locale = getLocale(Astro.url);
const dir = getDirection(locale);

const categories = [
  {
    title: "Explore",
    description:
      "Block explorers, network monitors, and utilities for the Monero blockchain.",
    href: localizeHref(locale, "/resources/monero-tools/explore"),
    linkText: `${exploreCount} items`,
  },
  {
    title: "Develop",
    description: "Libraries and SDKs for building applications.",
    href: localizeHref(locale, "/resources/monero-tools/develop"),
    linkText: `${developCount} items`,
  },
  {
    title: "Accept Payments",
    description:
      "Payment processors and plugins for accepting Monero on your website or store.",
    href: localizeHref(locale, "/resources/monero-tools/accept"),
    linkText: `${acceptCount} items`,
  },
];
---

<Layout
  title="Monero Tools"
  description="Find the right Monero tool for what you're trying to do - explore the blockchain, build applications, or accept payments."
>
  <TitleCard
    title="Monero Tools"
    subtitle="Find the right tool for what you're trying to do."
  />

  <PageContainer>
    <div class="card-grid">
      {
        categories.map((cat) => (
          <CategoryCard
            title={cat.title}
            description={cat.description}
            href={cat.href}
            linkText={cat.linkText}
            rtl={dir === "rtl"}
          />
        ))
      }
    </div>
  </PageContainer>
</Layout>

<style>
  .card-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  @media (max-width: 900px) {
    .card-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
