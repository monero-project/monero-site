---
import DisclaimerBar from "@/components/ui/DisclaimerBar.astro";
import ExternalResourceButton from "@/components/ui/ExternalResourceButton.astro";
import MaskIcon from "@/components/ui/MaskIcon.astro";
import PageContainer from "@/components/ui/PageContainer.astro";
import PageSection from "@/components/ui/PageSection.astro";
import TitleCard from "@/components/ui/TitleCard.astro";
import { blockExplorers, networkTools, utilities } from "@/data/monero-tools";
import { getDirection, getLocale, localizeHref } from "@/i18n/utils";
import Layout from "@/layouts/Layout.astro";

import chevronLeftIcon from "@/assets/icons/mask/chevron-left.avif";
import shieldAlertIcon from "@/assets/icons/mask/shieldAlert.avif";

const locale = getLocale(Astro.url);
const dir = getDirection(locale);
---

<Layout
  title="Explore Monero"
  description="Block explorers, network monitors, and utilities for browsing the Monero blockchain."
>
  <TitleCard
    title="Explore"
    subtitle="Block explorers, network monitors, and utilities for browsing the Monero blockchain."
  />

  <PageContainer>
    <a href={localizeHref(locale, "/resources/monero-tools")} class="back-link">
      <span class="back-icon">
        <MaskIcon src={chevronLeftIcon} size="1.25rem" rtl={dir === "rtl"} />
      </span>
      Back to Monero Tools
    </a>

    <PageSection
      title="Block Explorers"
      subtitle="View transactions, blocks, and on-chain data."
      anchorId="explorers"
    >
      <ul class="tool-list">
        {
          blockExplorers.map((tool) => (
            <li>
              <ExternalResourceButton
                href={tool.href}
                title={tool.title}
                subtitle={tool.subtitle}
                onionHref={tool.onionHref}
                rtl={dir === "rtl"}
              />
            </li>
          ))
        }
      </ul>
    </PageSection>

    <hr aria-hidden="true" />

    <PageSection
      title="Network & Nodes"
      subtitle="Monitor the network, find nodes, and visualize activity."
      anchorId="network"
    >
      <ul class="tool-list">
        {
          networkTools.map((tool) => (
            <li>
              <ExternalResourceButton
                href={tool.href}
                title={tool.title}
                subtitle={tool.subtitle}
                rtl={dir === "rtl"}
              />
            </li>
          ))
        }
      </ul>
    </PageSection>

    <hr aria-hidden="true" />

    <PageSection
      title="Utilities"
      subtitle="Wallet generators, price comparisons, statistics, and archives."
      anchorId="utilities"
    >
      <ul class="tool-list">
        {
          utilities.map((tool) => (
            <li>
              <ExternalResourceButton
                href={tool.href}
                title={tool.title}
                subtitle={tool.subtitle}
                rtl={dir === "rtl"}
              />
            </li>
          ))
        }
      </ul>
    </PageSection>
  </PageContainer>

  <DisclaimerBar icon={shieldAlertIcon} title="Disclaimer">
    These links are provided for informational purposes only and do not
    constitute an endorsement by the Monero community. To suggest a tool, <a
      href="https://github.com/monero-project/monero-site/issues/new"
      target="_blank"
      rel="noopener noreferrer">open a GitHub issue</a
    >.
  </DisclaimerBar>
</Layout>

<style>
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    color: var(--monero-orange);
    text-decoration: none;
    margin-bottom: 1.5rem;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  .back-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    border-radius: 999px;
    background: var(--card-color);
  }

  .tool-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
  }

  @media (max-width: 900px) {
    .tool-list {
      grid-template-columns: 1fr;
    }
  }
</style>
