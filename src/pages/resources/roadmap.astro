---
import HistoryTimeline from "@/components/pages/roadmap/HistoryTimeline.astro";
import StatusSection from "@/components/pages/roadmap/StatusSection.astro";
import Grid from "@/components/ui/Grid.astro";
import PageContainer from "@/components/ui/PageContainer.astro";
import PageSection from "@/components/ui/PageSection.astro";
import Column from "@/components/ui/Column.astro";
import TitleCard from "@/components/ui/TitleCard.astro";
import Layout from "@/layouts/Layout.astro";

import roadmapData from "@/data/roadmap";

const { t } = Astro.locals;
const { items, history } = roadmapData;
---

<Layout title={t("roadmap:pageTitle")} description={t("roadmap:hero.subtitle")}>
  <TitleCard
    title={t("roadmap:hero.title")}
    subtitle={t("roadmap:hero.subtitle")}
  />

  <PageContainer>
    <Column>
      <Grid
        as="section"
        columns={3}
        gap="xl"
        class="kanban"
        aria-label={t("roadmap:aria.kanban")}
      >
        <Column class="kanban-column">
          <header class="section-label">
            <span class="label-dot active"></span>
            <h2>{t("roadmap:status.inProgress")}</h2>
          </header>
          <StatusSection items={items} status="in-progress" />
        </Column>

        <Column class="kanban-column">
          <header class="section-label">
            <span class="label-dot upcoming"></span>
            <h2>{t("roadmap:status.upcoming")}</h2>
          </header>
          <StatusSection items={items} status="upcoming" />
        </Column>

        <Column class="kanban-column proposed">
          <header class="section-label">
            <span class="label-dot proposed"></span>
            <h2>{t("roadmap:status.proposed")}</h2>
          </header>
          <StatusSection items={items} status="proposed" />
        </Column>
      </Grid>

      <hr aria-hidden="true" />

      <PageSection title={t("roadmap:history.title")} anchorId="history">
        <HistoryTimeline history={history} />
      </PageSection>
    </Column>
  </PageContainer>
</Layout>

<style>
  hr {
    margin-block: 1rem;
  }
  .kanban {
    align-items: start;
  }

  .section-label {
    display: flex;
    align-items: center;
    gap: 0.625rem;
  }

  .section-label h2 {
    margin: 0;
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    color: var(--heading-color);
  }

  .label-dot {
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 50%;
    background: var(--paragraph-subtitle);
  }

  .label-dot.active {
    background: var(--monero-orange);
    box-shadow: 0 0 0 3px
      color-mix(in srgb, var(--monero-orange) 25%, transparent);
    animation: pulse 2s ease-in-out infinite;
  }

  .label-dot.upcoming {
    background: var(--heading-color);
  }

  .label-dot.proposed {
    background: transparent;
    border: 1.5px solid var(--paragraph-subtitle);
  }

  @keyframes pulse {
    0%,
    100% {
      box-shadow: 0 0 0 3px
        color-mix(in srgb, var(--monero-orange) 25%, transparent);
    }
    50% {
      box-shadow: 0 0 0 5px
        color-mix(in srgb, var(--monero-orange) 15%, transparent);
    }
  }

  .kanban-column:first-child :global(.status-item) {
    border-radius: 0 var(--radius-md) var(--radius-md) 0;
    border-inline-start: 3px solid var(--monero-orange);
  }

  .kanban-column.proposed :global(.status-item) {
    background: transparent;
    border: 1px solid var(--border-color);
  }

  .kanban-column.proposed :global(a.status-item:hover) {
    background: var(--card-hover-color);
    border-color: var(--card-color);
  }

  .kanban-column.proposed :global(.status-title) {
    color: var(--paragraph-main);
  }
</style>
