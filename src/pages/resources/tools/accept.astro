---
import DisclaimerBar from "@/components/ui/disclaimer/DisclaimerBar.astro";
import ExternalResourceButton from "@/components/ui/ExternalResourceButton.astro";
import Grid from "@/components/ui/layout/Grid.astro";
import PageContainer from "@/components/ui/layout/PageContainer.astro";
import TitleCard from "@/components/ui/TitleCard.astro";
import { paymentGateways } from "@/data/resources/monero-tools";
import Layout from "@/layouts/Layout.astro";
import { icons } from "@/utils/icons";

const { t, localizeHref } = Astro.locals;
---

<Layout
  title={t("tools:accept.pageTitle")}
  description={t("tools:accept.subtitle")}
>
  <TitleCard
    title={t("tools:accept.title")}
    subtitle={t("tools:accept.subtitle")}
    backHref={localizeHref("/resources/tools/")}
    backLabel={t("tools:index.title")}
  />

  <PageContainer>
    <Grid as="ul" columns={2} gap="sm">
      {
        paymentGateways.map((tool) => (
          <li>
            <ExternalResourceButton
              href={tool.href}
              title={tool.title}
              logo={tool.logo}
              subtitle={t(`tools:accept.tools.${tool.id}`)}
            />
          </li>
        ))
      }
    </Grid>
  </PageContainer>

  <DisclaimerBar
    icon={icons.mask("shield-alert")}
    title={t("tools:accept.disclaimer.title")}
  >
    {t("tools:accept.disclaimer.text")}
    <a
      href="https://github.com/monero-project/monero-site/issues/new"
      target="_blank"
      rel="noopener noreferrer">{t("tools:accept.disclaimer.linkText")}</a
    >.
  </DisclaimerBar>
</Layout>
