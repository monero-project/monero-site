---
import Layout from "@/layouts/Layout.astro";
import TitleCard from "../../components/ui/TitleCard.astro";
import Accordion from "@/components/ui/Accordion.astro";
import type { AccordionItem } from "@/components/ui/Accordion.astro";
import IndexCard from "@/components/pages/index/IndexCard.astro";
import ResourceCard from "@/components/pages/index/ResourceCard.astro";
import { createTInstance, getLocale } from "@/i18n/utils";

import userGuidesIcon from "@/assets/icons/mask/user-guides.avif?url";
import developerGuidesIcon from "@/assets/icons/mask/developer-guides.avif?url";
import faqIcon from "@/assets/icons/mask/faq.avif?url";

const locale = getLocale(Astro.url);
const t = await createTInstance(locale);
---

<Layout title={t("faq.pageTitle")}>
  <TitleCard
    title={t("faq.heroTitle")}
    subtitle={t("faq.heroSubtitle")}
  />
  <div class="accordion-grid">
    <div class="accordion-card">
      <h2 class="card-title">{t("faq.basics.title")}</h2>
      <Accordion items={t("faq.basics.items", { returnObjects: true }) as AccordionItem[]} />
    </div>
    <div class="accordion-card">
      <h2 class="card-title">{t("faq.nodes.title")}</h2>
      <Accordion items={t("faq.nodes.items", { returnObjects: true }) as AccordionItem[]} />
    </div>
    <div class="accordion-card">
      <h2 class="card-title">{t("faq.privacy.title")}</h2>
      <Accordion items={t("faq.privacy.items", { returnObjects: true }) as AccordionItem[]} />
    </div>
    <div class="accordion-card">
      <h2 class="card-title">{t("faq.security.title")}</h2>
      <Accordion items={t("faq.security.items", { returnObjects: true }) as AccordionItem[]} />
    </div>
    <div class="accordion-card">
      <h2 class="card-title">{t("faq.wallets.title")}</h2>
      <Accordion items={t("faq.wallets.items", { returnObjects: true }) as AccordionItem[]} />
    </div>
    <div class="accordion-card">
      <h2 class="card-title">{t("faq.economics.title")}</h2>
      <Accordion items={t("faq.economics.items", { returnObjects: true }) as AccordionItem[]} />
    </div>
  </div>
  <IndexCard title="Resources and Help" description="Explore the knowledge base to learn everything about Monero, from basic blockchain terms to advanced privacy mechanisms and technology.">
    <div id="resource-container">
      <ResourceCard
        icon={userGuidesIcon}
        title={t("faq.additionalResources.userGuides.title")}
        description={t("faq.additionalResources.userGuides.description")}
        ctaLabel={t("faq.additionalResources.userGuides.ctaLabel")}
        ctaHref="/resources/knowledge-base"
      />
      <ResourceCard
        icon={developerGuidesIcon}
        title={t("faq.additionalResources.devGuides.title")}
        description={t("faq.additionalResources.devGuides.description")}
        ctaLabel={t("faq.additionalResources.devGuides.ctaLabel")}
        ctaHref="/resources/knowledge-base"
      />
      <ResourceCard
        icon={faqIcon}
        title={t("faq.additionalResources.stackExchange.title")}
        description={t("faq.additionalResources.stackExchange.description")}
        ctaLabel={t("faq.additionalResources.stackExchange.ctaLabel")}
        ctaHref="/resources/knowledge-base"
      />
      <ResourceCard
        icon={developerGuidesIcon}
        title={t("faq.additionalResources.reddit.title")}
        description={t("faq.additionalResources.reddit.description")}
        ctaLabel={t("faq.additionalResources.reddit.ctaLabel")}
        ctaHref="/resources/knowledge-base"
      />
      <ResourceCard
        icon={developerGuidesIcon}
        title={t("faq.additionalResources.monerohow.title")}
        description={t("faq.additionalResources.monerohow.description")}
        ctaLabel={t("faq.additionalResources.monerohow.ctaLabel")}
        ctaHref="/resources/knowledge-base"
      />
    </div>
  </IndexCard>
</Layout>

<style>
  .accordion-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.25rem;
    margin: 6rem 0;
  }

  #resource-container {
    grid-column: span 2;
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    overflow: hidden;
  }

  .accordion-card {
    background-color: var(--card-color);
    padding: 3rem;
    border-radius: 0.5rem;
  }

  .card-title {
    margin: 0 0 1.5rem 0;
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--paragraph-main);
    text-transform: uppercase;
  }

  @media (max-width: 900px) {
    .accordion-card {
      padding: 1.5rem;
    }
    .accordion-grid {
      grid-template-columns: 1fr;
    }
    #resource-container {
      display: flex;
      flex-direction: column;
    }
  }
</style>
