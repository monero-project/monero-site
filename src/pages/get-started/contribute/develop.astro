---
import ExternalResourceButton from "@/components/ui/ExternalResourceButton.astro";
import ProjectsTable from "@/components/pages/get-started/contribute/ProjectsTable.astro";
import PageContainer from "@/components/ui/layout/PageContainer.astro";
import PageSection from "@/components/ui/layout/PageSection.astro";
import SidebarCard from "@/components/ui/sidebar/SidebarCard.astro";
import SidebarLayout from "@/components/ui/sidebar/SidebarLayout.astro";
import SidebarLink from "@/components/ui/sidebar/SidebarLink.astro";
import Column from "@/components/ui/layout/Column.astro";
import TitleCard from "@/components/ui/TitleCard.astro";
import Layout from "@/layouts/Layout.astro";

import cuprateLogo from "@/assets/images/nodes/cuprate.avif";
import p2poolLogo from "@/assets/images/ecosystem/p2pool.png";
import xmrigLogo from "@/assets/images/ecosystem/xmrig.png";
import { icons } from "@/utils/icons";

const { t, localizeHref } = Astro.locals;

const coreProjects = [
  {
    title: t("contribute:develop.daemon.title"),
    description: t("contribute:develop.daemon.description"),
    tags: ["C++"],
    href: "https://github.com/monero-project/monero",
    icon: icons.mask("terminal"),
  },
  {
    title: t("contribute:develop.guiWallet.title"),
    description: t("contribute:develop.guiWallet.description"),
    tags: ["C++", "QML"],
    href: "https://github.com/monero-project/monero-gui",
    icon: icons.mask("app-window"),
  },
  {
    title: t("contribute:develop.moneroWebsite.title"),
    description: t("contribute:develop.moneroWebsite.description"),
    tags: ["TypeScript"],
    href: "https://github.com/monero-project/monero-site",
    icon: icons.mask("globe"),
  },
  {
    title: t("contribute:develop.moneroDocs.title"),
    description: t("contribute:develop.moneroDocs.description"),
    tags: ["Markdown"],
    href: "https://github.com/monero-project/monero-docs",
    icon: icons.mask("book-text"),
  },
];

const communityProjects = [
  {
    title: t("contribute:develop.cuprate.title"),
    subtitle: t("contribute:develop.cuprate.description"),
    href: "https://github.com/Cuprate/cuprate",
    logo: cuprateLogo,
  },

  {
    title: t("contribute:develop.p2pool.title"),
    subtitle: t("contribute:develop.p2pool.description"),
    href: "https://github.com/SChernykh/p2pool",
    logo: p2poolLogo,
  },
  {
    title: t("contribute:develop.xmrig.title"),
    subtitle: t("contribute:develop.xmrig.description"),
    href: "https://github.com/xmrig/xmrig",
    logo: xmrigLogo,
  },
];
---

<Layout
  title={t("contribute:develop.title")}
  description={t("contribute:develop.subtitle")}
>
  <TitleCard
    title={t("contribute:develop.title")}
    subtitle={t("contribute:develop.subtitle")}
    backHref={localizeHref("/get-started/contribute/")}
    backLabel={t("contribute:index.title")}
  />

  <PageContainer>
    <SidebarLayout>
      <Column gap="2xl">
        <PageSection
          title={t("contribute:develop.coreProjects")}
          subtitle={t("contribute:develop.coreProjectsSubtitle")}
        >
          <ProjectsTable
            projects={coreProjects}
            headers={{
              project: t("contribute:develop.table.project"),
              description: t("contribute:develop.table.description"),
              stack: t("contribute:develop.table.stack"),
              visit: t("contribute:develop.table.visit"),
            }}
          />
        </PageSection>

        <PageSection
          title={t("contribute:develop.communityProjects")}
          subtitle={t("contribute:develop.communityProjectsSubtitle")}
        >
          <Column gap="sm">
            {
              communityProjects.map((project) => (
                <ExternalResourceButton
                  href={project.href}
                  title={project.title}
                  subtitle={project.subtitle}
                  logo={project.logo}
                />
              ))
            }
          </Column>
        </PageSection>
      </Column>

      <Fragment slot="sidebar">
        <SidebarCard
          title={t("contribute:develop.bounties.title")}
          subtitle={t("contribute:develop.bounties.description")}
        >
          <SidebarLink
            href="https://bounties.monero.social/"
            icon={icons.mask("coins")}
            external
          >
            {t("contribute:develop.bounties.browseMoneroBounties")}
          </SidebarLink>
          <SidebarLink
            href="https://hackerone.com/monero"
            icon={icons.mask("shield-check")}
            external
          >
            {t("contribute:develop.bounties.securityDisclosures")}
          </SidebarLink>
        </SidebarCard>

        <SidebarCard
          title={t("contribute:develop.workgroups.title")}
          subtitle={t("contribute:develop.workgroups.description")}
        >
          <SidebarLink
            href={localizeHref("/community/workgroups/")}
            icon={icons.mask("users")}
          >
            {t("contribute:develop.workgroups.joinWorkgroups")}
          </SidebarLink>
        </SidebarCard>

        <SidebarCard title={t("contribute:develop.resources.title")}>
          <SidebarLink
            href="https://docs.getmonero.org/"
            icon={icons.mask("book-text")}
            external
          >
            {t("contribute:develop.resources.moneroDocs")}
          </SidebarLink>
          <SidebarLink
            href={localizeHref("/resources/tools/develop/")}
            icon={icons.mask("code-xml")}
          >
            {t("contribute:develop.resources.librariesSdks")}
          </SidebarLink>
          <SidebarLink
            href="https://github.com/monero-project"
            icon={icons.mask("external-link")}
            external
          >
            {t("contribute:develop.resources.githubOrganization")}
          </SidebarLink>
        </SidebarCard>
      </Fragment>
    </SidebarLayout>
  </PageContainer>
</Layout>
