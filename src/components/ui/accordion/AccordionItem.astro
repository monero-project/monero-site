---
import chevronDownIcon from "@/assets/icons/mask/chevron-down.avif";
import DOMPurify from "isomorphic-dompurify";
import MaskIcon from "../icons/MaskIcon.astro";

export interface Props {
  title: string;
  content?: string;
  variant?: "default" | "card";
  name?: string;
  open?: boolean;
}

const { title, content, variant = "default", name, open = false } = Astro.props;
---

<details
  class="item"
  data-variant={variant !== "default" ? variant : undefined}
  name={name}
  open={open}
>
  <summary class="header">
    <span class="title">{title}</span>
    <div class="icon">
      <MaskIcon src={chevronDownIcon} />
    </div>
  </summary>
  {
    content ? (
      <div class="content" set:html={DOMPurify.sanitize(content)} />
    ) : (
      <div class="content">
        <slot />
      </div>
    )
  }
</details>

<style>
  .item {
    border-bottom: 1px solid var(--border-color);

    &:last-child {
      border-bottom: none;
    }
  }

  .header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-xl) 0;
    cursor: pointer;
    list-style: none;
    user-select: none;
    gap: var(--space-sm);

    &::-webkit-details-marker {
      display: none;
    }
  }

  .title {
    color: var(--heading-color);
    font-weight: var(--font-weight-semibold);
    font-size: var(--font-size-lg);
  }

  .icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1.5rem;
    height: 1.5rem;
    border-radius: 50%;
    background: var(--border-color);
    color: var(--paragraph-main);
    flex-shrink: 0;
    margin-inline-start: auto;

    .item[open] & {
      transform: rotate(180deg);
    }
  }

  .content {
    padding: 0 0 var(--space-xl) 0;
    color: var(--paragraph-main);
    line-height: var(--line-height-body);
    font-weight: var(--font-weight-normal);

    > :global(p:first-child) {
      margin-top: 0;
    }

    > :global(p:last-child) {
      margin-bottom: 0;
    }
  }

  /* Card variant */
  .item[data-variant="card"] {
    border: none;
    margin-bottom: var(--space-sm);
    border-radius: var(--radius-lg);
    background: var(--card-color);
    padding: 0 var(--space-lg);

    &:last-child {
      margin-bottom: 0;
    }

    > .header {
      padding: var(--space-lg) 0;
    }

    &:has(.header:focus-visible) {
      border-radius: var(--radius-lg);
    }

    > .content {
      padding: 0 0 var(--space-lg) 0;
    }
  }

  @media (hover: hover) {
    .header:hover .icon {
      background: var(--card-hover-color);
    }
  }

  @media screen and (width <= 900px) {
    .header {
      padding: var(--space-md) 0;
    }

    .title {
      font-size: var(--font-size-base);
    }
  }
</style>
