---
interface Props {
  title?: string;
  columns?: number;
  minColumnWidth?: string;
  class?: string;
}

const {
  title,
  columns,
  minColumnWidth = "20rem",
  class: className,
} = Astro.props;
---

<div
  class:list={[
    columns ? "columns-container" : "page-section-column",
    className,
  ]}
  style={columns ? `--min-col-width: ${minColumnWidth}` : undefined}
>
  {title && <h3 class="column-title">{title}</h3>}
  <slot />
</div>

<style>
  .columns-container {
    display: grid;
    grid-template-columns: repeat(
      auto-fit,
      minmax(min(var(--min-col-width, 20rem), 100%), 1fr)
    );
    gap: 2rem;
  }

  .page-section-column {
    display: flex;
    flex-direction: column;
  }

  .column-title {
    margin: 0 0 1rem;
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--paragraph-main);
  }
</style>
