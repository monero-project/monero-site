---
import { getLocale } from "astro-i18n-aut";
import { locales, defaultLocale } from "@/i18n/config";
import { getLocaleName } from "@/i18n/utils";
import MaskIcon from "@/components/ui/MaskIcon.astro";
import Globe from "@/assets/icons/mask/globe.avif?url";

const currentLocale = getLocale(Astro.url);

const localeList = Object.keys(locales).map((code) => {
  const { name = code } = getLocaleName(code) ?? {};
  return { code, name };
});

const codes = Object.keys(locales).join("|");

const core = Astro.url.pathname
  .replace(new RegExp(`^/(?:${codes})(?=/|$)`), "")
  .replace(/^\/|\/$/g, "");

const base = core ? `/${core}/` : "/";

const hrefFor = (locale: string) =>
  locale === defaultLocale ? base : `/${locale}${base}`;
---

<div class="lang-container">
  <button
    class="lang"
    type="button"
    aria-label="Change language"
    aria-haspopup="true"
  >
    <MaskIcon src={Globe} size="1.25rem" />
  </button>

  <div class="lang-dropdown" aria-label="Languages">
    <ul class="lang-list">
      {
        localeList.map((locale) => (
          <li>
            <a
              href={hrefFor(locale.code)}
              class={locale.code === currentLocale ? "active" : ""}
              aria-current={locale.code === currentLocale ? "true" : undefined}
            >
              {locale.name}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</div>

<style>
  /* ===== Base / Desktop ===== */
  .lang-container {
    position: relative;
    display: inline-block;
  }

  /* Globe trigger */
  .lang {
    margin-inline-start: auto;
    display: inline-flex;
    align-items: center;
    cursor: pointer;
    padding: 0;
    border: 0;
    background: transparent;
    vertical-align: middle;
    color: inherit;
  }
  .lang:hover {
    color: var(--on-dark);
  }
  .lang:focus,
  .lang:focus-visible {
    outline: none;
  }

  /* Panel (hidden by default) */
  .lang-dropdown {
    position: absolute;
    inset-block-start: 100%;
    inset-inline-end: 0;

    margin-top: 0.5rem;
    background: var(--card-color);
    border-radius: 0.75rem;
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.35);
    z-index: 999;
    min-width: 140px;
    padding: 0.5rem;

    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition:
      opacity 0.15s ease,
      visibility 0.15s ease;
  }

  /* Items */
  .lang-list {
    list-style: none;
    margin: 0;
    padding: 0.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
  .lang-list li {
    margin: 0;
  }
  .lang-list a {
    display: block;
    padding: 0.5rem 0.75rem;
    color: var(--heading-color);
    text-decoration: none;
    border-radius: 0.5rem;
  }
  .lang-list a:hover,
  .lang-list a:focus {
    background: var(--card-hover-color);
  }
  .lang-list a.active {
    font-weight: 600;
    background: var(--card-hover-color);
  }

  /* Open state: when button or any link inside has focus */
  .lang-container:focus-within .lang-dropdown {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }
  .lang-container:focus-within .lang {
    color: var(--on-dark);
  }

  /* ===== Mobile: dock to sticky header, full-bleed, scrollable ===== */
  @media (max-width: 1500px) {
    /* ensure dropdown anchors to .header (sticky) instead of button */
    .lang-container {
      position: static;
    }

    .lang-dropdown {
      position: absolute;
      top: 100%; /* directly below header bottom */
      /* full-bleed across viewport regardless of header padding */
      left: 0;
      right: 0;
      margin: 0;
      width: auto;

      box-shadow: 0 12px 30px -12px rgba(0, 0, 0, 0.35);
      border-radius: 0;
      margin-top: 0;
      padding: 0.5rem 0;

      max-height: 75dvh;
      overflow-y: auto;
      -webkit-overflow-scrolling: touch;
    }

    .lang-list {
      padding: 0.25rem max(0.75rem, env(safe-area-inset-left)) 0.5rem
        max(0.75rem, env(safe-area-inset-right));
      gap: 0.25rem;
    }

    .lang-list a {
      padding: 0.75rem;
    } /* larger tap targets */

    .lang {
      padding: 0.5rem 0;
    }
  }
</style>
