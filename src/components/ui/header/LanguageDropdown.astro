---
import { defaultLocale, locales } from "@/i18n/config";
import { getLocaleName } from "@/i18n/utils";
import { getLocale } from "astro-i18n-aut";

import MaskIcon from "@/components/ui/MaskIcon.astro";

import Globe from "@/assets/icons/mask/globe.avif?url";

const currentLocale = getLocale(Astro.url);

const localeList = Object.keys(locales).map((code) => {
  const { name = code } = getLocaleName(code) ?? {};
  return { code, name };
});

const codes = Object.keys(locales).join("|");

const core = Astro.url.pathname
  .replace(new RegExp(`^/(?:${codes})(?=/|$)`), "")
  .replace(/^\/|\/$/g, "");

const base = core ? `/${core}/` : "/";

const hrefFor = (locale: string) =>
  locale === defaultLocale ? base : `/${locale}${base}`;
---

<details class="lang-container">
  <summary
    class="lang"
    aria-label="Change language"
    aria-haspopup="true"
    role="button"
  >
    <MaskIcon src={Globe} size="1.25rem" />
  </summary>

  <div class="lang-dropdown" aria-label="Languages">
    <ul class="lang-list">
      {
        localeList.map((locale) => (
          <li>
            <a
              href={hrefFor(locale.code)}
              class={locale.code === currentLocale ? "active" : ""}
              aria-current={locale.code === currentLocale ? "true" : undefined}
            >
              {locale.name}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</details>

<style>
  /* ===== Base / Desktop ===== */
  .lang-container {
    position: relative;
    display: inline-block;
  }

  .lang-container > summary {
    list-style: none;
  }
  .lang-container > summary::marker,
  .lang-container > summary::-webkit-details-marker {
    display: none;
  }

  .lang {
    margin-inline-start: auto;
    display: inline-flex;
    align-items: center;
    cursor: pointer;
    padding: 0;
    border: 0;
    background: transparent;
    vertical-align: middle;
    color: inherit;
  }
  .lang:hover {
    color: var(--on-dark);
  }
  .lang:focus,
  .lang:focus-visible {
    outline: none;
  }

  /* Panel (hidden by default) */
  .lang-dropdown {
    position: absolute;
    inset-block-start: 100%;
    inset-inline-end: 0;

    margin-top: 0.5rem;
    background: var(--card-color);
    border-radius: 0.75rem;
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.35);
    z-index: 999;
    min-width: 140px;
    padding: 0.5rem;
    user-select: none;

    visibility: hidden;
    pointer-events: none;
    transform: translateY(-10px);
    transition: transform 0.2s ease;
  }

  /* Items */
  .lang-list {
    list-style: none;
    margin: 0;
    padding: 0.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
  .lang-list li {
    margin: 0;
  }
  .lang-list a {
    display: block;
    padding: 0.5rem 0.75rem;
    color: var(--heading-color);
    text-decoration: none;
    border-radius: 0.5rem;
  }
  .lang-list a:hover,
  .lang-list a:focus {
    background: var(--card-hover-color);
  }
  .lang-list a.active {
    font-weight: 600;
    background: var(--card-hover-color);
  }

  /* Open state: toggled by click (details[open]) */
  .lang-container[open] .lang-dropdown {
    visibility: visible;
    pointer-events: auto;
    transform: translateY(0);
  }
  .lang-container[open] .lang {
    color: var();
  }

  /* ===== Mobile: dock to sticky header, full-bleed, scrollable ===== */
  @media (max-width: 1200px) {
    /* ensure dropdown anchors to .header (sticky) instead of button */
    .lang-container {
      position: static;
    }

    .lang-dropdown {
      position: absolute;
      inset-inline: 0;
      inset-block-start: 100%;

      box-shadow: 0 4px 2px -2px rgba(0, 0, 0, 0.2);
      border-radius: 0 0 0.5rem 0.5rem;
      margin-top: unset;
      padding-top: 0;

      max-height: 75dvh;
      overflow-y: auto;
      -webkit-overflow-scrolling: touch;
    }

    .lang-list {
      gap: 0.25rem;
    }

    .lang-list a {
      padding: 0.75rem;
    } /* larger tap targets */

    .lang {
      padding: 0.5rem 0;
    }
  }
</style>
