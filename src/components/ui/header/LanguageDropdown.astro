---
import { locales } from "@/i18n/config";
import { getLocaleName, localizeHref } from "@/i18n/utils";

import MaskIcon from "@/components/ui/icons/MaskIcon.astro";

import Globe from "@/assets/icons/mask/globe.avif";

const { t, locale: currentLocale } = Astro.locals;

const localeList = Object.keys(locales).map((code) => {
  const { name = code } = getLocaleName(code) ?? {};
  return { code, name };
});
---

<details class="lang-container">
  <summary
    class="lang"
    aria-label={t("common:components.languageDropdown.changeLanguage")}
    aria-haspopup="true"
    role="button"
  >
    <MaskIcon src={Globe} size="1.5rem" />
  </summary>

  <div
    class="lang-dropdown"
    aria-label={t("common:components.languageDropdown.languages")}
  >
    <ul class="lang-list">
      {
        localeList.map((locale) => (
          <li>
            <a
              href={localizeHref(locale.code, Astro.url.pathname)}
              class={locale.code === currentLocale ? "active" : ""}
              aria-current={locale.code === currentLocale ? "true" : undefined}
            >
              {locale.name}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</details>

<style>
  .lang-container {
    position: static;
    display: inline-block;

    > summary {
      list-style: none;

      &::marker,
      &::-webkit-details-marker {
        display: none;
      }
    }
  }

  .lang {
    margin-inline-start: auto;
    display: inline-flex;
    align-items: center;
    cursor: pointer;
    padding: var(--space-xs) 0;
    border: 0;
    background: transparent;
    vertical-align: middle;
    color: inherit;

    &:hover,
    &:focus-visible,
    .lang-container[open] & {
      color: var(--heading-color);
    }
  }

  /* Panel (hidden by default) */
  .lang-dropdown {
    position: absolute;
    inset-inline: 0;
    inset-block-start: 100%;
    background: var(--card-color);
    box-shadow: 0 4px 2px -2px rgb(0 0 0 / 20%);
    border-radius: 0 0 var(--radius-md) var(--radius-md);
    z-index: var(--z-overlay);
    padding-inline: clamp(1rem, 4vw, 4rem);
    padding-block: 0 var(--space-md);
    user-select: none;
    max-height: 75dvh;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    visibility: hidden;
    pointer-events: none;
    transform: translateY(-10px);
    transition: transform 0.2s ease;

    .lang-container[open] & {
      visibility: visible;
      pointer-events: auto;
      transform: translateY(0);
    }
  }

  /* Items */
  .lang-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2xs);

    li {
      margin: 0;
    }

    a {
      display: block;
      padding: var(--space-sm);
      color: var(--heading-color);
      text-decoration: none;
      border-radius: var(--radius-md);

      &:hover,
      &:focus {
        background: var(--card-hover-color);
      }

      &.active {
        font-weight: var(--font-weight-semibold);
        background: var(--card-hover-color);
      }
    }
  }

  @media (width >= 1200px) and (hover: hover) {
    .lang-container {
      position: relative;
    }

    .lang {
      padding: 0;
    }

    .lang-dropdown {
      inset-inline: auto;
      inset-inline-end: 0;
      inset-block-start: 100%;
      margin-top: var(--space-xs);
      padding: var(--space-sm);
      min-width: 140px;
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow-lg);
      max-height: none;
      overflow: visible;
    }

    .lang-list a {
      padding: var(--space-xs) var(--space-sm);
    }
  }
</style>
