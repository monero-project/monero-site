---
import dropdownCaret from "@/assets/icons/mask/dropdown-caret.avif?url";
import arrowRight from "@/assets/icons/mask/arrow-right.avif?url";
import MaskIcon from "@/components/ui/MaskIcon.astro";
import ColorIcon from "@/components/ui/ColorIcon.astro";
import { getDirection, getLocale } from "@/i18n/utils";

export interface DropdownItem {
  label: string;
  href: string;
  desc?: string;
  icon: string;
  iconDark?: string;
}

export interface Props {
  label: string;
  href?: string;
  dropdown?: DropdownItem[];
}

const { label, href, dropdown = [] } = Astro.props;
const isDropdown = dropdown.length > 0;
const id = "dd-" + Math.random().toString(36).slice(2, 11);
const closeId = id + "-close";
const dir = getDirection(getLocale(Astro.url));
---

<li class={`nav-item${isDropdown ? " nav-item--dropdown" : ""}`}>
  {
    isDropdown ? (
      <>
        <input
          id={id}
          class="dd-toggle"
          type="radio"
          name="nav-dd"
          aria-hidden="true"
        />
        <input
          id={closeId}
          class="dd-close"
          type="radio"
          name="nav-dd"
          aria-hidden="true"
        />

        <div class="row">
          {href ? (
            <a href={href} class="link">
              {label}
              <span class="caret" aria-hidden="true">
                <MaskIcon src={dropdownCaret} />
              </span>
            </a>
          ) : (
            <span class="link" role="link" tabindex="0">
              {label}
              <span class="caret" aria-hidden="true">
                <MaskIcon src={dropdownCaret} />
              </span>
            </span>
          )}

          <label
            for={id}
            class="mobile-open"
            aria-label={`Open ${label} menu`}
          />
          <label
            for={closeId}
            class="mobile-close"
            aria-label={`Close ${label} menu`}
          />
        </div>

        <div
          class="dropdown"
          role="menu"
          aria-label={`${label} menu`}
          tabindex="-1"
        >
          <div class="dropdown-inner">
            <div class="dropdown-content">
              {dropdown.map((item) => (
                <a href={item.href} class="dropdown-item" role="menuitem">
                  <ColorIcon
                    src={item.icon}
                    darkSrc={item.iconDark}
                    size="2rem"
                    class="icon"
                  />
                  <div class="content">
                    <div class="title">{item.label}</div>
                    {item.desc && <div class="desc">{item.desc}</div>}
                  </div>
                  <div class="arrow">
                    <MaskIcon
                      src={arrowRight}
                      size="0.75rem"
                      rtl={dir == "rtl"}
                    />
                  </div>
                </a>
              ))}
            </div>
          </div>
        </div>
      </>
    ) : (
      <a href={href} class="link row">
        {label}
      </a>
    )
  }
</li>

<style>
  /* === Base === */
  .nav-item {
    /* desktop: static, mobile overrides to relative */
    position: static;
    cursor: pointer;
  }

  .row {
    position: relative;
    display: flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.4rem 0;
  }

  .link {
    color: var(--paragraph-main);
    text-decoration: none;
    font-weight: 500;
    flex: 1;
    display: flex;
    align-items: center;
    user-select: none;
    white-space: nowrap;
  }

  .link:focus-visible {
    outline: 2px solid currentColor;
    outline-offset: 2px;
  }

  .link:hover {
    color: var(--heading-color);
  }

  .caret {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-inline-start: 0.35rem;
    border-radius: 0.2rem;
    transition: transform 0.2s ease;
  }

  .mobile-open,
  .mobile-close {
    display: none;
  }

  .dd-toggle,
  .dd-close {
    display: none;
  }

  /* === Desktop mega  dropdown === */
  .dropdown {
    position: absolute;
    inset-inline: 0;
    inset-block-start: 100%;

    opacity: 0;
    pointer-events: none;
    transform: translateY(-10px);
    transition: transform 0.2s ease;
    z-index: 20;
  }

  .dropdown::before {
    content: "";
    position: absolute;
    inset-inline: 0;
    inset-block-start: 0;
    height: 1.5rem;
    transform: translateY(-100%);
    background: transparent;
  }

  .dropdown-inner {
    background: var(--card-color);
    box-shadow: 0 4px 2px -2px rgba(0, 0, 0, 0.2);
    border-radius: 0 0 0.5rem 0.5rem;
    padding-block: 0 1rem;
  }

  .dropdown-content {
    max-width: 1200px;
    margin-inline: auto;
    padding-inline: clamp(1rem, 4vw, 4rem);

    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1rem 1.5rem;
  }

  /* Items */
  .dropdown-item {
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    gap: 1rem;
    color: var(--heading-color);
    text-decoration: none;
    padding: 0.75rem;
    border-radius: 0.5rem;
  }

  .dropdown-item:where(:hover, :focus-visible) {
    background: var(--card-hover-color);
  }

  .icon {
    width: 2rem;
    height: 2rem;
    flex: 0 0 2rem;
  }

  .title {
    font-weight: 600;
  }

  .desc {
    font-size: 0.9rem;
    color: var(--paragraph-subtitle);
    line-height: 1.35;
    margin-top: 0.15rem;
  }

  .arrow {
    display: flex;
    align-items: flex-start;
    margin-inline-start: auto;
    opacity: 0;
    transition: opacity 0.2s ease;
    color: var(--paragraph-subtitle);
  }

  .dropdown-item:hover .arrow,
  .dropdown-item:focus-visible .arrow {
    opacity: 1;
  }

  /* === Desktop hover/focus behaviour === */
  @media (hover: hover) and (pointer: fine) {
    /* show dropdown on hover/focus */
    .nav-item--dropdown:is(
        :hover,
        :focus-within,
        :has(.dropdown :focus-visible)
      )
      > .dropdown {
      opacity: 1;
      pointer-events: auto;
      transform: translateY(0);
    }

    /* highlight link when open */
    .nav-item--dropdown:is(
        :hover,
        :focus-within,
        :has(.dropdown :focus-visible)
      )
      > .row
      > .link {
      color: var(--heading-color);
    }

    /* rotate caret when open */
    .nav-item--dropdown:is(
        :hover,
        :focus-within,
        :has(.dropdown :focus-visible)
      )
      > .row
      > .link
      > .caret {
      transform: rotate(180deg);
    }

    /* radio overlay disabled on desktop */
    .mobile-open,
    .mobile-close {
      pointer-events: none;
      display: none;
    }
  }

  /* === Mobile / tablet (drawer accordion) === */
  @media (max-width: 1200px) {
    .item {
      position: relative;
    }

    .row {
      padding: 0.5rem 0;
    }

    .mobile-open {
      display: block;
      position: absolute;
      inset: 0;
      pointer-events: auto;
      cursor: pointer;
      z-index: 1;
    }

    .mobile-close {
      display: none;
    }

    .dd-toggle:checked ~ .row .mobile-open {
      display: none;
    }

    .dd-toggle:checked ~ .row .mobile-close {
      display: block;
      position: absolute;
      inset: 0;
      pointer-events: auto;
      cursor: pointer;
      z-index: 1;
    }

    .dropdown {
      position: static;
      margin: 0.25rem 0 0;
      width: unset;
      opacity: 1;
      visibility: visible;
      box-shadow: unset;
      pointer-events: auto;
      /* accordion behaviour - collapsed by default */
      max-height: 0;
      overflow: hidden;
    }

    .dropdown::before {
      content: none;
    }

    .dropdown-inner {
      background: none;
      box-shadow: none;
      border-radius: 0;
      padding: 0;
    }

    .dropdown-content {
      max-width: none;
      padding-inline: 0;
      display: block;
    }

    .dd-toggle:checked ~ .dropdown {
      max-height: unset;
    }

    .dd-toggle:checked ~ .row > .caret {
      transform: rotate(180deg);
    }
  }

  /* === Reduce motion === */
  @media (prefers-reduced-motion: reduce) {
    .dropdown,
    .caret {
      transition: none;
    }
  }
</style>
