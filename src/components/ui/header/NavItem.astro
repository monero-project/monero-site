---
import dropdownCaret from "@/assets/icons/mask/dropdown-caret.avif?url";
import arrowRight from "@/assets/icons/mask/arrow-right.avif?url";
import MaskIcon from "@/components/ui/MaskIcon.astro";
import ColorIcon from "@/components/ui/ColorIcon.astro";
import { getDirection, getLocale } from "@/i18n/utils";

export interface DropdownItem {
  label: string;
  href: string;
  desc?: string;
  icon: string;
  iconDark?: string;
}

export interface Props {
  label: string;
  href?: string;
  dropdown?: DropdownItem[];
}

const { label, href, dropdown = [] } = Astro.props;
const isDropdown = dropdown.length > 0;
const id = "dd-" + Math.random().toString(36).slice(2, 11);
const closeId = id + "-close";
const dir = getDirection(getLocale(Astro.url));
---

<li class={`item${isDropdown ? " has-dd" : ""}`}>
  {
    isDropdown ? (
      <>
        <input
          id={id}
          class="dd-toggle"
          type="radio"
          name="nav-dd"
          aria-hidden="true"
        />
        <input
          id={closeId}
          class="dd-close"
          type="radio"
          name="nav-dd"
          aria-hidden="true"
        />

        <div class="row">
          {href ? (
            <a href={href} class="link">
              {label}
            </a>
          ) : (
            <span class="link" role="link" tabindex="0">
              {label}
            </span>
          )}

          <span class="caret" aria-hidden="true">
            <MaskIcon src={dropdownCaret} />
          </span>

          <label
            for={id}
            class="mobile-open"
            aria-label={`Open ${label} menu`}
          />
          <label
            for={closeId}
            class="mobile-close"
            aria-label={`Close ${label} menu`}
          />
        </div>

        <div class="dropdown" role="menu" aria-label={`${label} menu`}>
          {dropdown.map((item) => (
            <a href={item.href} class="dropdown-item" role="menuitem">
              <ColorIcon
                src={item.icon}
                darkSrc={item.iconDark}
                size="2rem"
                class="icon"
              />
              <div class="content">
                <div class="title">{item.label}</div>
                {item.desc && <div class="desc">{item.desc}</div>}
              </div>
              <div class="arrow">
                <MaskIcon src={arrowRight} size="0.75rem" rtl={dir == "rtl"} />
              </div>
            </a>
          ))}
        </div>
      </>
    ) : (
      <a href={href} class="link row">
        {label}
      </a>
    )
  }
</li>

<style>
  /* === Base === */
  .item {
    position: relative;
  }
  .row {
    position: relative;
    display: flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.4rem 0;
  }
  .link {
    color: var(--paragraph-main);
    text-decoration: none;
    font-weight: 500;
    flex: 1;
    user-select: none;
    white-space: nowrap;
  }
  .link:focus-visible {
    outline: 2px solid currentColor;
    outline-offset: 2px;
  }
  .link:hover {
    color: var(--heading-color);
  }

  .caret {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-inline-start: 0.15rem;
    border-radius: 0.2rem;
    transition: transform 0.2s ease;
  }

  .mobile-open,
  .mobile-close {
    display: none;
  }
  .dd-toggle,
  .dd-close {
    display: none;
  }

  .dropdown {
    position: absolute;
    inset-block-start: 100%;
    inset-inline-start: 0;
    margin-top: 0.5rem;
    min-width: 35rem;
    padding: 1rem;
    border-radius: 0.75rem;
    background: var(--card-color);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.35);
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.15s ease,
      visibility 0.15s ease;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem 1.5rem;
    z-index: 20;
  }

  /* Items */
  .dropdown-item {
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    gap: 1rem;
    color: var(--heading-color);
    text-decoration: none;
    padding: 0.75rem;
    border-radius: 0.5rem;
  }
  .dropdown-item:where(:hover, :focus) {
    background: var(--card-hover-color);
  }
  .icon {
    width: 2rem;
    height: 2rem;
    flex: 0 0 2rem;
  }
  .title {
    font-weight: 600;
  }
  .desc {
    font-size: 0.9rem;
    color: var(--paragraph-subtitle);
    line-height: 1.35;
    margin-top: 0.15rem;
  }

  .arrow {
    display: flex;
    align-items: start;
    margin-inline-start: auto;
    opacity: 0;
    transition: opacity 0.2s ease;
    color: var(--paragraph-subtitle);
  }

  .dropdown-item:hover .arrow {
    opacity: 1;
  }

  /* === Desktop hover/focus === */
  @media (hover: hover) and (pointer: fine) {
    .has-dd::after {
      content: "";
      position: absolute;
      left: 0;
      right: 0;
      top: 100%;
      height: 0.625rem;
    }
    /* Show panel on hover OR when submenu is focused */
    .has-dd:is(:hover, :has(.dropdown :focus)) > .dropdown {
      opacity: 1;
      visibility: visible;
    }
    .has-dd:is(:hover, :has(.dropdown :focus)) > .row > .link {
      color: var(--heading-color);
    }
    /* rotate caret on hover open */
    .has-dd:is(:hover, :has(.dropdown :focus)) > .row > .caret {
      transform: rotate(180deg);
    }
    .mobile-open,
    .mobile-close {
      pointer-events: none;
    }
  }

  /* === Mobile (whole-row toggle) === */
  @media (max-width: 1500px) {
    .row {
      padding: 0.5rem 0;
    }

    /* Show open label by default, close label when expanded */
    .mobile-open {
      display: block;
      position: absolute;
      inset: 0;
      pointer-events: auto;
      cursor: pointer;
      z-index: 1;
    }
    .mobile-close {
      display: none;
    }
    .dd-toggle:checked ~ .row .mobile-open {
      display: none;
    }
    .dd-toggle:checked ~ .row .mobile-close {
      display: block;
      position: absolute;
      inset: 0;
      pointer-events: auto;
      cursor: pointer;
      z-index: 1;
    }

    .dropdown {
      position: static;
      margin: 0.25rem 0 0;
      min-width: unset;
      padding: 0;
      background: none;
      box-shadow: none;
      border-radius: 0;
      opacity: 1;
      visibility: visible;
      display: block;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.15s ease;
    }
    .dd-toggle:checked ~ .dropdown {
      max-height: unset;
    }
    .dd-toggle:checked ~ .row > .caret {
      transform: rotate(180deg);
    }
  }

  /* === Reduce motion === */
  @media (prefers-reduced-motion: reduce) {
    .dropdown,
    .caret {
      transition: none;
    }
  }
</style>
