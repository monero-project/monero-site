---
import type { ImageMetadata } from "astro";

import MaskIcon from "@/components/ui/icons/MaskIcon.astro";
import NavDropdownLink from "./NavDropdownLink.astro";

import chevronDown from "@/assets/icons/mask/chevron-down.avif";

export interface DropdownItem {
  label: string;
  href: string;
  desc?: string;
  icon: ImageMetadata;
  iconDark?: ImageMetadata;
}

export interface Props {
  label: string;
  href?: string;
  dropdown?: DropdownItem[];
}

const { label, href, dropdown = [] } = Astro.props;
const isDropdown = dropdown.length > 0;
const id = "dd-" + Math.random().toString(36).slice(2, 11);
const closeId = id + "-close";
---

<li class="nav-item" data-is-dropdown={isDropdown || undefined}>
  {
    isDropdown && (
      <>
        <input
          id={id}
          class="dd-toggle"
          type="radio"
          name="nav-dd"
          aria-hidden="true"
          hidden
        />
        <input
          id={closeId}
          class="dd-close"
          type="radio"
          name="nav-dd"
          aria-hidden="true"
          hidden
        />
      </>
    )
  }

  <div class="row">
    <a href={href} class="link">
      {label}
      {
        isDropdown && (
          <span class="caret" aria-hidden="true">
            <MaskIcon src={chevronDown} />
          </span>
        )
      }
    </a>

    {
      isDropdown && (
        <>
          <label
            for={id}
            class="mobile-open"
            aria-label={`Open ${label} menu`}
          />
          <label
            for={closeId}
            class="mobile-close"
            aria-label={`Close ${label} menu`}
          />
        </>
      )
    }
  </div>

  {
    isDropdown && (
      <div class="dropdown" role="menu" aria-label={`${label} menu`}>
        <div class="dropdown-content">
          {dropdown.map((item) => (
            <NavDropdownLink {...item} />
          ))}
        </div>
      </div>
    )
  }
</li>

<style>
  .nav-item {
    position: relative;
  }

  .row {
    position: relative;
    display: flex;
    align-items: center;
    cursor: pointer;
  }

  .link {
    color: var(--paragraph-main);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    display: flex;
    align-items: center;
    user-select: none;
    white-space: nowrap;
    padding-block: var(--space-md);
    width: 100%;

    &:hover {
      color: var(--heading-color);
    }
  }

  .caret {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-inline-start: var(--space-2xs);
    border-radius: var(--radius-sm);
    transition: transform 0.2s ease;
  }

  .dd-toggle,
  .dd-close {
    display: none;
  }

  /* mobile list dividers */
  .nav-item:not(:last-child) {
    border-bottom: 1px solid var(--border-color);
  }

  /* === Mobile / tablet dropdown (accordion) === */
  .mobile-open {
    display: block;
    position: absolute;
    inset: 0;
    pointer-events: auto;
    cursor: pointer;
  }

  .mobile-close {
    display: none;
  }

  .dropdown {
    position: static;
    width: unset;
    max-height: 0;
    overflow: hidden;
  }

  .dropdown-content {
    max-width: none;
    margin-inline: 0;
    padding-inline: 0;
    padding-bottom: var(--space-md);
    display: block;
  }

  /* Mobile open state */
  .dd-toggle:checked {
    ~ .dropdown {
      max-height: unset;
    }

    ~ .row > .link {
      color: var(--heading-color);

      > .caret {
        transform: rotate(180deg);
      }
    }

    ~ .row .mobile-open {
      display: none;
    }

    ~ .row .mobile-close {
      display: block;
      position: absolute;
      inset: 0;
      pointer-events: auto;
      cursor: pointer;
    }
  }

  .nav-item[data-is-dropdown]:is(:focus-within, :has(.dropdown :focus-visible))
    > .row
    > .link {
    color: var(--heading-color);
  }

  @media (width >= 1200px) and (hover: hover) {
    .nav-item {
      position: static;
    }

    .row {
      margin-block: calc(-1 * var(--space-md)) var(--space-xs);
      padding-block: var(--space-xl) 0;
    }

    .link {
      padding-block: unset;
    }

    /* reset mobile accordion states */
    .dd-toggle:checked ~ .row > .link {
      color: unset;

      > .caret {
        transform: unset;
      }
    }

    /* remove mobile dividers */
    .nav-item:not(:last-child) {
      border-bottom: none;
    }

    /* disable radio overlay labels on desktop */
    .mobile-open,
    .mobile-close {
      display: none;
    }

    .dropdown {
      position: absolute;
      inset-inline: 0;
      inset-block-start: 100%;

      /* unset mobile accordion constraints */
      max-height: unset;
      overflow: visible;

      /* desktop hidden-by-default */
      visibility: hidden;
      pointer-events: none;
      transform: translateY(-10px);
      transition: transform 0.2s ease;
      z-index: var(--z-header);
      background: var(--card-color);
      box-shadow: 0 4px 2px -2px rgb(0 0 0 / 20%);
      border-radius: 0 0 var(--radius-md) var(--radius-md);
      padding-block: 0 var(--space-md);
    }

    .dropdown::before {
      content: "";
      position: absolute;
      inset-inline: 0;
      inset-block-start: 0;
      height: 1.5rem;
      transform: translateY(-100%);
      background: transparent;
    }

    .dropdown-content {
      padding-bottom: unset;
      max-width: 1200px;
      margin-inline: auto;
      padding-inline: clamp(1rem, 4vw, 4rem);
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: var(--space-md) var(--space-xl);
    }
  }

  @media (width >= 1200px) and (hover: hover) and (pointer: fine) {
    .nav-item[data-is-dropdown]:is(
        :hover,
        :focus-within,
        :has(.dropdown :focus-visible)
      ) {
      > .dropdown {
        visibility: visible;
        pointer-events: auto;
        transform: translateY(0);
      }

      > .row > .link {
        color: var(--heading-color);

        > .caret {
          transform: rotate(180deg);
        }
      }
    }
  }

  /* Reduce motion */
  @media (prefers-reduced-motion: reduce) {
    .dropdown,
    .caret {
      transition: none;
    }
  }
</style>
