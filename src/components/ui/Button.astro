---
import type { HTMLAttributes } from "astro/types";

type As = "button" | "a" | "span";
type Variant = "primary" | "secondary" | "outline" | "danger";

interface Props extends HTMLAttributes<As> {
  variant?: Variant;
  class?: string;
  href?: string;
  target?: string;
  rel?: string;
  as?: As;
  type?: "button" | "submit" | "reset";
}

const {
  variant = "primary",
  class: className = "",
  href,
  target,
  rel,
  as = "button",
  type = "button",
  ...rest
}: Props = Astro.props;
---

{
  href ? (
    <a
      href={href}
      target={target}
      rel={rel}
      data-variant={variant}
      class:list={["button", className]}
      {...rest}
    >
      <slot />
    </a>
  ) : as === "button" ? (
    <button
      type={type}
      data-variant={variant}
      class:list={["button", className]}
      {...rest}
    >
      <slot />
    </button>
  ) : (
    <span
      role="button"
      data-variant={variant}
      class:list={["button", className]}
      {...rest}
    >
      <slot />
    </span>
  )
}

<style>
  .button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75em 1.5em;
    border-radius: var(--radius-full);
    font: inherit;
    font-weight: var(--font-weight-bold);
    transition: opacity 0.2s ease;
    border: 1px solid transparent;
    cursor: pointer;
    text-decoration: none;
    user-select: none;
    box-sizing: border-box;
  }

  .button[data-variant="primary"] {
    background: var(--monero-orange);
    color: white;
  }
  .button[data-variant="secondary"] {
    background: var(--secondary-button-color, var(--footer-color));
    color: var(--paragraph-main);
  }
  .button[data-variant="outline"] {
    background: transparent;
    color: var(--monero-orange);
    border-color: var(--monero-orange);
  }

  .button:hover,
  .button:focus-visible {
    opacity: 0.9;
  }
</style>
