---
import Card from "./Card.astro";
import IconLink from "./IconLink.astro";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  description: string;
  href: string;
  image?: ImageMetadata;
  linkText?: string;
}

const { title, description, href, image, linkText } = Astro.props;

const { t } = Astro.locals;

const defaultLinkText = t("common:components.categoryCard.explore");
---

<Card as="a" padding="none" hover href={href} class="category-card">
  <div class="card-image">
    {image && <Image src={image} alt="" />}
  </div>
  <div class="card-content">
    <h2 class="card-title">{title}</h2>
    <p class="card-description">{description}</p>
    <IconLink as="span" class="card-link">
      {linkText || defaultLinkText}
    </IconLink>
  </div>
</Card>

<style>
  .category-card {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    overflow: hidden;
  }

  .card-image {
    aspect-ratio: 4 / 3;
    overflow: hidden;
    background: var(--card-hover-color);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-2xl);

    img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
  }

  .card-content {
    display: flex;
    flex-direction: column;
    flex: 1;
    padding: var(--space-xl);
    gap: var(--space-xs);
  }

  .card-title {
    margin: 0;
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: var(--heading-color);
    line-height: var(--line-height-title);
  }

  .card-description {
    margin: 0;
    color: var(--paragraph-subtitle);
    line-height: var(--line-height-body);
  }

  .card-link {
    margin-top: auto;
    padding-top: var(--space-md);

    .category-card:hover & {
      opacity: 0.8;
    }
  }

  @media (width <= 900px) {
    .category-card {
      flex-direction: row;
      align-items: stretch;

      .card-link {
        display: none;
      }
    }

    .card-image {
      aspect-ratio: 1;
      width: 5rem;
      flex-shrink: 0;
      padding: var(--space-md);
    }

    .card-content {
      padding: var(--space-sm) var(--space-md);
      gap: var(--space-2xs);
      justify-content: center;
    }

    .card-title {
      font-size: var(--font-size-base);
    }

    .card-description {
      font-size: var(--font-size-sm);
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  }
</style>
