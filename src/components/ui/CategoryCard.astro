---
import arrowRight from "@/assets/icons/mask/arrow-right.avif";
import MaskIcon from "@/components/ui/MaskIcon.astro";
import { getDirection, getLocale } from "@/i18n/utils";

interface Props {
  title: string;
  description: string;
  href: string;
  image?: string;
  linkText?: string;
}

const { title, description, href, image, linkText = "Explore" } = Astro.props;

const rtl = getDirection(getLocale(Astro.url)) === "rtl";
---

<a href={href} class="category-card">
  <div class="card-image">
    {image && <img src={image} alt="" />}
  </div>
  <div class="card-content">
    <h2 class="card-title">{title}</h2>
    <p class="card-description">{description}</p>
    <span class="card-link">
      {linkText}
      <MaskIcon src={arrowRight} size="1em" rtl={rtl} />
    </span>
  </div>
</a>

<style>
  .category-card {
    display: flex;
    flex-direction: column;
    background: var(--card-color);
    border-radius: 0.5rem;
    text-decoration: none;
    overflow: hidden;
  }

  .category-card:hover {
    background: var(--card-hover-color);
  }

  .card-image {
    aspect-ratio: 4 / 3;
    overflow: hidden;
    background: var(--card-hover-color);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    flex: 1;
    padding: 1.5rem;
    gap: 0.5rem;
  }

  .card-title {
    margin: 0;
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: var(--heading-color);
    line-height: var(--line-height-title);
  }

  .card-description {
    margin: 0;
    color: var(--paragraph-subtitle);
    line-height: var(--line-height-body);
  }

  .card-link {
    display: inline-flex;
    align-items: center;
    gap: 0.35em;
    margin-top: auto;
    padding-top: 1rem;
    font-weight: var(--font-weight-semibold);
    color: var(--monero-orange);
  }

  .category-card:hover .card-link {
    text-decoration: underline;
  }

  @media (max-width: 900px) {
    .category-card {
      flex-direction: row;
      align-items: stretch;
    }

    .card-image {
      aspect-ratio: 1;
      width: 5rem;
      flex-shrink: 0;
      padding: 1rem;
    }

    .card-content {
      padding: 0.875rem 1rem;
      gap: 0.25rem;
      justify-content: center;
    }

    .card-title {
      font-size: var(--font-size-base);
    }

    .card-description {
      font-size: var(--font-size-xs);
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .card-link {
      display: none;
    }
  }
</style>
