---
import type { ImageMetadata } from "astro";
import MaskIcon from "./MaskIcon.astro";

export interface Props {
  title: string;
  icon?: ImageMetadata;
  subtitle?: string;
  class?: string;
}

const { title, icon, subtitle, class: className, ...rest } = Astro.props;
const hasBottom = Astro.slots.has("bottom");
---

<article class:list={["contentCard", className]} {...rest}>
  <header class="contentCardHeader">
    <div class="titleRow">
      {
        icon && (
          <div class="cardIcon">
            <MaskIcon src={icon} size="1.5em" />
          </div>
        )
      }
      <div class="titleBlock">
        <h3 class="contentCardTitle">{title}</h3>
        {subtitle && <p class="contentCardSubtitle">{subtitle}</p>}
      </div>
    </div>
  </header>

  <div class="contentCardBody">
    <slot />
    {
      hasBottom && (
        <footer class="contentCardBottom">
          <slot name="bottom" />
        </footer>
      )
    }
  </div>
</article>

<style>
  .contentCard {
    background: var(--card-color);
    border-radius: 0.5rem;
    padding: 1.25rem;
    position: relative;
    display: flex;
    flex-direction: column;
    min-width: 0;
  }

  .titleRow {
    display: flex;
    gap: 0.5em;
    align-items: center;
    min-width: 0;
  }

  .cardIcon {
    width: 2rem;
    height: 2rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--monero-orange);
    flex-shrink: 0;
  }

  .titleBlock {
    display: flex;
    flex-direction: column;
    min-width: 0;
  }

  .contentCardTitle {
    margin: 0;
    color: var(--paragraph-main);
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.02em;
    line-height: 1;
    font-size: var(--font-size-lg);
    overflow: hidden;
  }

  .contentCardSubtitle {
    margin: 0.25rem 0 0;
    color: var(--paragraph-subtitle);
    line-height: 1.2;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .contentCardBody {
    flex: 1;
    margin-top: 1rem;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.85rem;
    min-height: 0;
  }

  .contentCardBody :global(p) {
    margin: 0;
    max-width: 75ch;
  }

  .contentCardBottom {
    margin-top: auto;
  }

  .contentCardBottom :global(span.title) {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: var(--font-weight-bold);
    color: var(--heading-color);
  }

  .contentCardBottom :global(ul) {
    margin: 0;
    padding-inline-start: 0;
    list-style: none;
    display: grid;
    gap: 0.4rem;
  }

  .contentCardBottom :global(a) {
    display: inline-flex;
    align-items: center;
    gap: 0.35em;
    font-weight: var(--font-weight-bold);
    color: var(--monero-orange);
    text-decoration: none;
    width: fit-content;
  }

  .contentCardBottom :global(a:hover) {
    text-decoration: underline;
  }
</style>
