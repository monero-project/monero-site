---
import Card from "@/components/ui/Card.astro";
import MaskIcon from "@/components/ui/icons/MaskIcon.astro";
import type { ImageMetadata } from "astro";

interface Props {
  icon?: ImageMetadata;
  title?: string;
}

const { icon, title } = Astro.props;
---

<Card as="aside" padding="md" class="disclaimer-bar">
  {
    icon && (
      <span class="disclaimer-icon">
        <MaskIcon src={icon} size="1.5em" aria-hidden="true" />
      </span>
    )
  }
  {title && <span class="disclaimer-title">{title}</span>}
  <p class="disclaimer-text"><slot /></p>
</Card>

<style>
  .disclaimer-bar {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: var(--space-xs) var(--space-sm);
    margin: var(--space-md) 0;
  }

  .disclaimer-icon {
    grid-row: 1;
    grid-column: 1;
    display: flex;
    align-items: center;
    color: var(--monero-orange);
  }

  .disclaimer-title {
    grid-row: 1;
    grid-column: 2;
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--heading-color);
  }

  .disclaimer-text {
    grid-row: 2;
    grid-column: 2;
    margin: 0;
    color: var(--text-primary);
    line-height: var(--line-height-body);
  }
</style>
