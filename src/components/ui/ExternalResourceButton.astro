---
import Card from "@/components/ui/Card.astro";
import externalLinkIcon from "@/assets/icons/mask/external-link.avif";
import torIcon from "@/assets/icons/mask/tor.avif";
import type { HTMLAttributes } from "astro/types";
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import MaskIcon from "./MaskIcon.astro";

export interface Props extends HTMLAttributes<"div"> {
  href: string;
  title: string;
  subtitle?: string;
  logo?: ImageMetadata;
  onionHref?: string;
  variant?: "default" | "mini";
  border?: boolean;
}

const {
  href,
  title,
  subtitle,
  logo,
  onionHref,
  variant = "default",
  border = false,
  class: className,
  ...rest
} = Astro.props;
const { t, dir } = Astro.locals;
const rtl = dir === "rtl";
---

<Card
  padding="none"
  hover
  class:list={[
    "external-resource-button",
    variant,
    { "has-onion": onionHref, "has-logo": logo },
    className,
  ]}
  data-border={border || undefined}
  {...rest}
>
  <a
    href={href}
    target="_blank"
    rel="noopener noreferrer external"
    class="primary-link"
    tabindex="-1"
  >
    {
      logo && (
        <div class="logo">
          <Image src={logo} alt={`${title} Logo`} format="avif" priority />
        </div>
      )
    }

    <div class="content">
      <span class="title">{title}</span>
      <span class="subtitle">{subtitle}</span>
    </div>
  </a>

  <a
    href={href}
    target="_blank"
    rel="noopener noreferrer external"
    class="link-icon"
  >
    <MaskIcon src={externalLinkIcon} size="1em" rtl={rtl} />
  </a>

  {
    onionHref && (
      <a
        href={onionHref}
        target="_blank"
        rel="noopener noreferrer external"
        class="onion-link"
        title={t("common:components.externalResourceButton.onionService")}
        aria-label={t(
          "common:components.externalResourceButton.openOnionService",
        )}
      >
        <MaskIcon src={torIcon} size="1.25em" />
      </a>
    )
  }
</Card>

<style>
  .external-resource-button {
    display: flex;
    align-items: stretch;
  }

  .external-resource-button[data-border] {
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
  }

  .primary-link {
    flex: 1;
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-md) var(--space-lg);
    text-decoration: none;
    min-width: 0;
  }

  .primary-link::after {
    display: none;
  }

  .logo {
    flex-shrink: 0;
    width: 3rem;
    height: 3rem;
    border-radius: var(--radius-md);
    overflow: hidden;
    background: var(--background-color);
  }

  .logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .content {
    flex: 1;
    min-width: 0;
  }

  .title {
    display: block;
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    color: var(--heading-color);
    line-height: var(--line-height-caption);
  }

  .subtitle {
    display: block;
    font-size: var(--font-size-sm);
    color: var(--paragraph-subtitle);
    line-height: var(--line-height-caption);
    margin-top: 0.125rem;
  }

  .link-icon,
  .onion-link {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;

    &::after {
      display: none;
    }
  }

  .link-icon {
    width: 3.5rem;
    color: color-mix(in srgb, var(--monero-orange) 60%, transparent);
    transition: color 0.15s ease;
  }

  .link-icon:hover,
  .primary-link:hover + .link-icon {
    color: var(--monero-orange);
  }

  .onion-link {
    width: 3.5rem;
    border-inline-start: 1px solid var(--border-color);
    color: #7d4698;
    transition: background 0.15s ease;

    &:hover {
      background: color-mix(in srgb, #7d4698 8%, transparent);
    }
  }

  /* Mini variant */
  .external-resource-button.mini {
    border-radius: var(--radius-md);
  }

  .external-resource-button.mini .primary-link {
    padding: var(--space-sm) var(--space-md);
    gap: var(--space-sm);
  }

  .external-resource-button.mini .logo {
    width: 2.25rem;
    height: 2.25rem;
    border-radius: var(--radius-sm);
  }

  .external-resource-button.mini .link-icon,
  .external-resource-button.mini .onion-link {
    width: 2.75rem;
  }

  @media screen and (max-width: 600px) {
    .external-resource-button.has-onion {
      flex-wrap: wrap;

      .primary-link {
        flex-basis: 100%;
      }

      .link-icon,
      .onion-link {
        flex: 1;
        width: auto;
        border-top: 1px solid var(--border-color);
        padding: var(--space-sm);
      }

      .onion-link {
        border-inline-start: 1px solid var(--border-color);
      }
    }
  }
</style>
