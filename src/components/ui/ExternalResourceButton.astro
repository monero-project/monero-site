---
import externalLinkIcon from "@/assets/icons/mask/external-link.avif";
import torIcon from "@/assets/icons/mask/tor.avif";
import { getPublicImageDimensions } from "@/utils/image";
import type { HTMLAttributes } from "astro/types";
import { Image } from "astro:assets";
import MaskIcon from "./MaskIcon.astro";

export interface Props extends HTMLAttributes<"div"> {
  href: string;
  title: string;
  subtitle?: string;
  logo?: string;
  rtl?: boolean;
  onionHref?: string;
  variant?: "default" | "mini";
}

const {
  href,
  title,
  subtitle,
  logo,
  rtl,
  onionHref,
  variant = "default",
  ...rest
} = Astro.props;
const logoDimensions = logo ? await getPublicImageDimensions(logo) : null;
---

<div
  class:list={[
    "external-resource-button",
    variant,
    { "has-onion": onionHref, "has-logo": logo },
  ]}
  {...rest}
>
  <a
    href={href}
    target="_blank"
    rel="noopener noreferrer external"
    class="primary-link"
  >
    {
      logo && logoDimensions && (
        <div class="logo">
          <Image
            src={logo}
            alt={`${title} Logo`}
            width={logoDimensions.width}
            height={logoDimensions.height}
            format="avif"
            priority
          />
        </div>
      )
    }

    <div class="content">
      <span class="title">{title}</span>
      <span class="subtitle">{subtitle}</span>
    </div>

    <span class="link-icon">
      <MaskIcon src={externalLinkIcon} size="1em" rtl={rtl} />
    </span>
  </a>

  {
    onionHref && (
      <a
        href={onionHref}
        target="_blank"
        rel="noopener noreferrer external"
        class="onion-link"
        title="Onion service"
        aria-label="Open onion service"
      >
        <MaskIcon src={torIcon} size="1.25em" />
      </a>
    )
  }
</div>

<style>
  .external-resource-button {
    display: flex;
    align-items: stretch;
    background: var(--card-color);
    border-radius: 0.5rem;
    overflow: hidden;
    transition: background 0.15s ease;
  }

  .external-resource-button:hover,
  .external-resource-button:focus-within {
    background: var(--card-hover-color);
  }

  .primary-link {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    text-decoration: none;
    min-width: 0;
  }

  .primary-link::after {
    display: none;
  }

  .logo {
    flex-shrink: 0;
    width: 3rem;
    height: 3rem;
    border-radius: 0.5rem;
    overflow: hidden;
    background: var(--background-color);
  }

  .logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .content {
    flex: 1;
    min-width: 0;
  }

  .title {
    display: block;
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    color: var(--heading-color);
    line-height: var(--line-height-caption);
  }

  .subtitle {
    display: block;
    font-size: var(--font-size-sm);
    color: var(--paragraph-subtitle);
    line-height: var(--line-height-caption);
    margin-top: 0.125rem;
  }

  .link-icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    opacity: 0.8;
    transition: opacity 0.15s ease;
  }

  .primary-link:hover .link-icon {
    opacity: 1;
  }

  /* Onion link button */
  .onion-link {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3.5rem;
    border-inline-start: 1px solid var(--border-color);
    color: #7d4698;
    transition: background 0.15s ease;
  }

  .onion-link::after {
    display: none;
  }

  .onion-link:hover {
    background: color-mix(in srgb, #7d4698 8%, transparent);
  }

  /* Mini variant */
  .external-resource-button.mini {
    border-radius: 0.5rem;
  }

  .external-resource-button.mini .primary-link {
    padding: 0.75rem 1rem;
    gap: 0.75rem;
  }

  .external-resource-button.mini .logo {
    width: 2.25rem;
    height: 2.25rem;
    border-radius: 0.375rem;
  }

  .external-resource-button.mini .onion-link {
    width: 2.75rem;
  }

  @media screen and (max-width: 600px) {
    .external-resource-button.has-onion {
      flex-wrap: wrap;
    }

    .external-resource-button.has-onion .primary-link {
      flex-basis: 100%;
    }

    .external-resource-button.has-onion .onion-link {
      flex: 1;
      width: auto;
      padding: 0.75rem;
      border-inline-start: none;
      border-top: 1px solid var(--border-color);
    }
  }
</style>
