---
import "node:crypto";

import MaskIcon from "./MaskIcon.astro";
import dropdownIcon from "@/assets/icons/mask/dropdown-caret.avif?url";
import DOMPurify from "isomorphic-dompurify";

export interface AccordionItem {
  title: string;
  content: string;
}

export interface Props {
  items: AccordionItem[];
  multiExpand?: boolean;
  variant?: "default" | "card";
}

const { items, multiExpand = false, variant = "default" } = Astro.props;
const accordionId = crypto.randomUUID();
---

<div class={`accordion accordion--${variant}`}>
  {
    items.map((item) => {
      return (
        <details
          class={`accordion-item accordion-item--${variant}`}
          name={multiExpand ? undefined : `accordion-${accordionId}`}
        >
          <summary class="accordion-header">
            <span class="accordion-title">{item.title}</span>
            <div class="accordion-icon">
              <MaskIcon src={dropdownIcon} />
            </div>
          </summary>
          <div
            class="accordion-content"
            set:html={DOMPurify.sanitize(item.content)}
          />
        </details>
      );
    })
  }
</div>

<style>
  .accordion {
    display: flex;
    flex-direction: column;
  }

  .accordion-item {
    border-bottom: 1px solid var(--border-color);
  }

  .accordion-item:last-child {
    border-bottom: none;
  }

  .accordion-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem 0;
    cursor: pointer;
    list-style: none;
    user-select: none;
    gap: 0.75rem;
  }

  .accordion-header::-webkit-details-marker {
    display: none;
  }

  .accordion-title {
    font-weight: var(--font-weight-semibold);
    font-size: var(--font-size-lg);
  }

  .accordion-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1.5rem;
    height: 1.5rem;
    border-radius: 50%;
    background: var(--border-color);
    color: var(--paragraph-main);
    flex-shrink: 0;
    margin-inline-start: auto;
  }

  .accordion-item[open] .accordion-icon {
    transform: rotate(180deg);
  }

  .accordion-content {
    padding: 0 0 1.5rem 0;
    color: var(--paragraph-main);
    font-family: "Inter Variable", sans-serif;
  }

  .accordion-content p {
    margin: 0;
    line-height: var(--line-height-body);
    font-weight: var(--font-weight-normal);
  }

  /* Card variant: no borders, spaced items, card background and rounded corners */
  .accordion-item--card {
    border: none;
    margin-bottom: 0.75rem;
    border-radius: 0.75rem;
    background: var(--card-color);
    padding: 0 1.25rem;
  }

  .accordion-item--card:last-child {
    margin-bottom: 0;
  }

  .accordion-item--card .accordion-header {
    padding: 1.25rem 0;
  }

  .accordion-item--card .accordion-content {
    padding: 0 0 1.25rem 0;
  }

  @media (hover: hover) {
    .accordion-header:hover .accordion-icon {
      background: var(--card-hover-color);
    }
  }
  @media screen and (max-width: 900px) {
    .accordion-header {
      padding: 1rem 0;
    }
    .accordion-title {
      font-size: var(--font-size-base);
    }
  }
</style>
