---
import chevronLeft from "@/assets/icons/mask/chevron-left.avif";
import MaskIcon from "./MaskIcon.astro";

export interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
  backHref?: string;
  backLabel?: string;
}

const {
  title,
  subtitle = "",
  centered = false,
  backHref,
  backLabel,
} = Astro.props;

const rtl = Astro.locals.dir === "rtl";
---

<header class:list={[{ centered }]}>
  {
    backHref && backLabel && (
      <a href={backHref} class="back-link">
        <span class="back-link-icon">
          <MaskIcon src={chevronLeft} size="1.125rem" rtl={rtl} />
        </span>
        <span class="back-link-label">{backLabel}</span>
      </a>
    )
  }
  <h1 class="title">{title}</h1>
  {subtitle && <p class="subtitle">{subtitle}</p>}
</header>

<style>
  header {
    display: flex;
    flex-direction: column;
  }

  header.centered {
    align-items: center;
    text-align: center;
  }

  header.centered .subtitle {
    margin-inline: auto;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    margin-bottom: var(--space-md);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    color: var(--paragraph-subtitle);
    text-decoration: none;
    transition: color 0.15s ease;
    width: fit-content;
  }

  .back-link:hover {
    color: var(--monero-orange);
    text-decoration: none;
  }

  .back-link-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    border-radius: var(--radius-full);
    background: var(--card-color);
    transition: background 0.15s ease;
  }

  .back-link:hover .back-link-icon {
    background: var(--card-hover-color);
  }

  .back-link-label {
    white-space: nowrap;
  }

  .title {
    margin: 0;
    color: var(--monero-orange);
    font-weight: var(--font-weight-extra-bold);
    line-height: var(--line-height-heading);
    font-size: var(--font-size-5xl);
  }

  .subtitle {
    max-width: 70ch;
    line-height: var(--line-height-body);
    font-size: var(--font-size-xl);
    color: var(--paragraph-main);
    font-weight: var(--font-weight-normal);
  }

  @media (max-width: 600px) {
    .subtitle {
      display: none;
    }
  }
</style>
