---
import BackLink from "./BackLink.astro";

export interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
  backHref?: string;
  backLabel?: string;
}

const {
  title,
  subtitle = "",
  centered = false,
  backHref,
  backLabel,
} = Astro.props;
---

<header class="header" data-centered={centered || undefined}>
  {
    backHref && backLabel && (
      <BackLink href={backHref} class="back">
        {backLabel}
      </BackLink>
    )
  }
  <h1 class="title">{title}</h1>
  {subtitle && <p class="subtitle">{subtitle}</p>}
</header>

<style>
  .header {
    display: flex;
    flex-direction: column;

    &[data-centered] {
      align-items: center;
      text-align: center;
    }
  }

  .back {
    margin-bottom: var(--space-md);
  }

  .title {
    margin: 0;
    color: var(--monero-orange);
    font-weight: var(--font-weight-extra-bold);
    line-height: var(--line-height-heading);
    font-size: var(--font-size-5xl);
  }

  .subtitle {
    max-width: 70ch;
    line-height: var(--line-height-body);
    font-size: var(--font-size-xl);
    color: var(--paragraph-main);
    font-weight: var(--font-weight-normal);

    .header[data-centered] & {
      margin-inline: auto;
    }
  }

  @media (width <= 600px) {
    .subtitle {
      display: none;
    }
  }
</style>
