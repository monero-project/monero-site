---
import chevronLeft from "@/assets/icons/mask/chevron-left.avif";
import MaskIcon from "./icons/MaskIcon.astro";

interface Props {
  href: string;
  size?: "sm" | "lg";
  class?: string;
}

const { href, size = "sm", class: className, ...rest } = Astro.props;

const rtl = Astro.locals.dir === "rtl";
---

<a href={href} class:list={["back-link", className]} data-size={size} {...rest}>
  <span class="icon-wrap">
    <MaskIcon
      src={chevronLeft}
      size={size === "lg" ? "1.25rem" : "1.125rem"}
      rtl={rtl}
    />
  </span>
  <span class="label"><slot /></span>
</a>

<style>
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    color: var(--paragraph-subtitle);
    transition: color 0.15s ease;
    width: fit-content;
    text-decoration: none;

    .icon-wrap {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 2rem;
      height: 2rem;
      border-radius: var(--radius-full);
      background: var(--card-color);
    }

    .label {
      white-space: nowrap;
    }

    &[data-size="lg"] {
      font-size: var(--font-size-2xl);
      color: var(--monero-orange);

      &:hover {
        opacity: 0.8;
      }
    }

    &:hover {
      color: var(--monero-orange);

      .icon-wrap {
        background: var(--card-hover-color);
      }
    }
  }
</style>
