---
import Card from "@/components/ui/Card.astro";
import Button from "@/components/ui/Button.astro";
import MaskIcon from "@/components/ui/MaskIcon.astro";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  href?: string;
  linkText?: string;
  icon?: ImageMetadata;
  variant?: "centered";
  class?: string;
}

const {
  title,
  href,
  linkText,
  icon,
  variant,
  class: className,
  ...rest
} = Astro.props;
const hasButtonsSlot = Astro.slots.has("buttons");
---

<Card
  padding="xl"
  class:list={["cta-card", { "has-icon": icon }, variant, className]}
  {...rest}
>
  {
    icon && (
      <span class="cta-icon">
        <MaskIcon src={icon} size="2rem" />
      </span>
    )
  }
  <h3 class="cta-title">{title}</h3>
  <div class="cta-description">
    <slot />
  </div>
  <div class="cta-link">
    {
      hasButtonsSlot ? (
        <slot name="buttons" />
      ) : (
        <Button href={href}>{linkText}</Button>
      )
    }
  </div>
</Card>

<style>
  .cta-card {
    margin-top: var(--space-2xl);
    border-end-start-radius: 0;
    border-start-start-radius: 0;
    border-inline-start: 3px solid var(--monero-orange);
  }

  .cta-card.has-icon {
    display: grid;
    grid-template-areas:
      "icon title"
      ".    description"
      ".    link";
    grid-template-columns: auto 1fr;
    column-gap: var(--space-md);
  }

  .cta-icon {
    grid-area: icon;
    display: flex;
    align-items: center;
    color: var(--monero-orange);
  }

  .cta-title {
    grid-area: title;
    align-self: start;
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--heading-color);
    margin: 0;
  }

  .cta-description {
    display: flex;
    flex-direction: column;
    grid-area: description;
    color: var(--paragraph-main);
    margin: var(--space-xs) 0 var(--space-md) 0;
    line-height: var(--line-height-body);
    gap: var(--space-sm);
    max-width: 75ch;
  }

  .cta-description :global(p) {
    margin: 0;
  }

  .cta-link {
    grid-area: link;
    display: inline-block;
    color: var(--monero-orange);
    font-weight: var(--font-weight-semibold);
  }

  .cta-card.centered {
    text-align: center;
    border-inline-start: unset;
    border-start-start-radius: unset;
    border-start-end-radius: unset;
    border-end-start-radius: var(--radius-md);
    border-block-start: 3px solid var(--monero-orange);
    display: grid;
    grid-template-areas:
      "title"
      "description"
      "link";
    grid-template-columns: unset;
    justify-items: center;
    row-gap: var(--space-xs);
  }
  .cta-card.centered.has-icon {
    grid-template-areas:
      "icon"
      "title"
      "description"
      "link";
  }
  .cta-card.centered .cta-description {
    max-width: 50ch;
    text-align: center;
    margin-inline: auto;
  }
  .cta-card.centered .cta-link {
    display: flex;
    justify-content: center;
    gap: var(--space-md);
    flex-wrap: wrap;
  }
</style>
