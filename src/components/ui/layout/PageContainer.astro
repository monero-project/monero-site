---
interface Props {
  class?: string;
  id?: string;
}

const { id, class: className, ...rest } = Astro.props;
const classes = ["page-container", className ?? ""].filter(Boolean).join(" ");
---

<div id={id} class={classes} {...rest}>
  <slot />
</div>

<style>
  .page-container {
    padding-bottom: var(--space-2xl);
  }
</style>
