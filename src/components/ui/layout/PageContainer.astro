---
interface Props {
  class?: string;
  id?: string;
  variant?: "spaced" | "flush";
}

const { id, class: className, variant = "flush", ...rest } = Astro.props;
const classes = [
  "page-container",
  variant === "spaced" ? "page-container--spaced" : "",
  className ?? "",
]
  .filter(Boolean)
  .join(" ");
---

<div id={id} class={classes} {...rest}>
  <slot />
</div>

<style>
  .page-container {
    padding-bottom: var(--space-2xl);
  }
  .page-container--spaced {
    margin-top: var(--space-2xl);
  }
</style>
