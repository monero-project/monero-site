---
import Card from "@/components/ui/Card.astro";
import MaskIcon from "@/components/ui/icons/MaskIcon.astro";
import type { ImageMetadata } from "astro";

import matrixIcon from "@/assets/icons/mask/matrix.avif";

export interface Props {
  name: string;
  action: string;
  bestFor: string;
  icon: ImageMetadata;
  chatName: string;
  ircHref: string;
  matrixHref?: string;
}

const { name, action, bestFor, icon, chatName, ircHref, matrixHref } =
  Astro.props;
const { t } = Astro.locals;
---

<Card as="article" padding="md" class="workgroup-card">
  <div class="card-header">
    <div class="card-icon">
      <MaskIcon src={icon} size="1.25em" />
    </div>
    <h3 class="card-name">{name}</h3>
  </div>

  <p class="card-action">{action}</p>

  <p class="card-best-for">
    <span class="best-for-label"
      >{t("common:components.workgroupCard.bestFor")}</span
    >
    {bestFor}
  </p>

  <div class="card-links">
    {
      matrixHref ? (
        <>
          <a
            href={matrixHref}
            target="_blank"
            rel="noopener noreferrer"
            class="matrix-button"
            title={t("common:components.workgroupCard.joinMatrix")}
          >
            <MaskIcon src={matrixIcon} size="1.5em" />
            Matrix
          </a>
          <span class="irc-link">
            <span class="irc-separator">Â·</span>
            <a
              href={ircHref}
              target="_blank"
              rel="noopener noreferrer"
              title={t("common:components.workgroupCard.joinIrc", { chatName })}
            >
              #{chatName}
            </a>
          </span>
        </>
      ) : (
        <a
          href={ircHref}
          target="_blank"
          rel="noopener noreferrer"
          class="matrix-button"
          title={t("common:components.workgroupCard.joinIrc", { chatName })}
        >
          #{chatName}
        </a>
      )
    }
  </div>
</Card>

<style>
  .workgroup-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .card-icon {
    width: 1.75rem;
    height: 1.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: color-mix(in srgb, var(--monero-orange) 12%, transparent);
    border-radius: var(--radius-sm);
    color: var(--monero-orange);
    flex-shrink: 0;
  }

  .card-name {
    margin: 0;
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-bold);
    color: var(--heading-color);
  }

  .card-action {
    margin: 0;
    font-size: var(--font-size-sm);
    color: var(--text-primary);
    line-height: var(--line-height-body);
  }

  .card-best-for {
    margin: 0;
    font-size: var(--font-size-sm);
    color: var(--paragraph-subtitle);

    .best-for-label {
      font-weight: var(--font-weight-semibold);
    }
  }

  .card-links {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    margin-top: auto;
    padding-top: 0.25rem;
    flex-wrap: wrap;
  }

  .matrix-button {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: var(--space-xs) var(--space-sm);
    background: var(--card-hover-color);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--heading-color);
    text-decoration: none;
    transition:
      background 0.15s ease,
      color 0.15s ease;

    &:hover {
      background: color-mix(
        in srgb,
        var(--heading-color) 10%,
        var(--card-hover-color)
      );
      color: white;
    }
  }

  .irc-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--font-size-sm);
    color: var(--paragraph-subtitle);

    a {
      color: var(--text-primary);
      text-decoration: none;
      transition: color 0.15s ease;

      &:hover {
        color: var(--paragraph-subtitle);
      }
    }
  }

  @media (width <= 400px) {
    .irc-link {
      width: 100%;

      &::before {
        content: "IRC: ";
      }
    }

    .irc-separator {
      display: none;
    }
  }
</style>
