---
import externalLinkIcon from "@/assets/icons/mask/external-link.avif";
import MaskIcon from "@/components/ui/MaskIcon.astro";

interface Props {
  items: Array<{
    id: string;
    link?: string;
    status: string;
  }>;
  status: "in-progress" | "upcoming" | "proposed";
  variant: "active" | "upcoming" | "proposed";
  label: string;
}

const { items, status, variant, label } = Astro.props;
const { t, dir } = Astro.locals;
const filteredItems = items.filter((item) => item.status === status);
const rtl = dir === "rtl";
---

<header class="status-label">
  <span class:list={["label-dot", variant]}></span>
  <h2>{label}</h2>
</header>

<ul class:list={["status-list", variant]}>
  {
    filteredItems.map((item) => (
      <li>
        {item.link ? (
          <a
            href={item.link}
            target="_blank"
            rel="noopener noreferrer"
            class="status-item"
          >
            <span class="status-title">
              {t(`roadmap:items.${item.id}.title`)}
              <MaskIcon src={externalLinkIcon} size="0.875em" rtl={rtl} />
            </span>
            <p class="status-desc">
              {t(`roadmap:items.${item.id}.description`)}
            </p>
          </a>
        ) : (
          <div class="status-item">
            <span class="status-title">
              {t(`roadmap:items.${item.id}.title`)}
            </span>
            <p class="status-desc">
              {t(`roadmap:items.${item.id}.description`)}
            </p>
          </div>
        )}
      </li>
    ))
  }
</ul>

<style>
  .status-label {
    display: flex;
    align-items: center;
    gap: 0.625rem;
  }

  .status-label h2 {
    margin: 0;
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    color: var(--heading-color);
  }

  .label-dot {
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 50%;
    background: var(--paragraph-subtitle);
  }

  .label-dot.active {
    background: var(--monero-orange);
    box-shadow: 0 0 0 3px
      color-mix(in srgb, var(--monero-orange) 25%, transparent);
    animation: pulse 2s ease-in-out infinite;
  }

  .label-dot.upcoming {
    background: var(--heading-color);
  }

  .label-dot.proposed {
    background: transparent;
    border: 1.5px solid var(--paragraph-subtitle);
  }

  @keyframes pulse {
    0%,
    100% {
      box-shadow: 0 0 0 3px
        color-mix(in srgb, var(--monero-orange) 25%, transparent);
    }
    50% {
      box-shadow: 0 0 0 5px
        color-mix(in srgb, var(--monero-orange) 15%, transparent);
    }
  }

  .status-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .status-item {
    display: block;
    padding: var(--space-sm) var(--space-md);
    background: var(--card-color);
    border-radius: var(--radius-md);
    transition: background 0.15s ease;
    text-decoration: none;
  }

  a.status-item::after {
    display: none;
  }
  a.status-item:hover {
    background: var(--card-hover-color);
  }

  .status-title {
    display: flex;
    align-items: center;
    gap: var(--space-2xs);
    font-weight: var(--font-weight-semibold);
    color: var(--heading-color);
    line-height: var(--line-height-caption);
  }

  .status-desc {
    margin: var(--space-2xs) 0 0;
    font-size: var(--font-size-sm);
    color: var(--paragraph-subtitle);
    line-height: var(--line-height-caption);
  }

  .status-list.active .status-item {
    border-radius: 0 var(--radius-md) var(--radius-md) 0;
    border-inline-start: 3px solid var(--monero-orange);
  }

  .status-list.proposed .status-item {
    background: transparent;
    border: 1px solid var(--border-color);
  }

  .status-list.proposed a.status-item:hover {
    background: var(--card-hover-color);
    border-color: var(--card-color);
  }

  .status-list.proposed .status-title {
    color: var(--paragraph-main);
  }
</style>
