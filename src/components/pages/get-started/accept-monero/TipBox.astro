---
import Card from "@/components/ui/Card.astro";
import MaskIcon from "@/components/ui/icons/MaskIcon.astro";
import { icons } from "@/utils/icons";

export interface Props {
  class?: string;
  showIcon?: boolean;
}

const { class: className, showIcon = false } = Astro.props;
---

<Card as="aside" padding="md" class:list={["tip-box", className]}>
  {
    showIcon && (
      <span class="icon">
        <MaskIcon src={icons.mask("shield-alert")} size="1.5em" />
      </span>
    )
  }
  <slot />
</Card>

<style>
  .tip-box {
    padding-inline: var(--space-sm) var(--space-lg);
    border-start-start-radius: 0;
    border-end-start-radius: 0;
    border-inline-start: 3px solid var(--monero-orange);
    font-size: var(--font-size-sm);
    color: var(--paragraph-subtitle);
    line-height: 1.6;
    max-width: 55ch;
    display: flex;
    align-items: flex-start;
    gap: var(--space-sm);

    .icon {
      flex-shrink: 0;
      margin-top: 0.125rem;
      color: var(--monero-orange);
    }
  }
</style>
