---
import DisclaimerNote from "@/components/ui/DisclaimerNote.astro";
import { getPublicImageDimensions } from "@/utils/image";
import { Image } from "astro:assets";
import type { TFunction } from "i18next";

export interface Props {
  title: string;
  description: string;
  exchanges: Array<{
    type: string;
    id: string;
    name: string;
    img: string;
    alt: string;
    fiat: boolean;
    crypto: boolean;
    url: string;
    kycClass?: string;
    kycReq?: string;
    userFriendly?: boolean;
  }>;
  hasKyc: boolean;
  disclaimerText?: string;
  t: TFunction;
}

const { title, description, exchanges, hasKyc, disclaimerText, t } =
  Astro.props;
---

<section class="table-section" aria-label={title}>
  <header class="table-header">
    <h2 class="title">{title}</h2>
    <p class="subtitle">{description}</p>
    {disclaimerText && <DisclaimerNote text={disclaimerText} />}
  </header>

  {
    exchanges.length > 0 && (
      <div class="table-wrap">
        <table class="exchange-table">
          <colgroup>
            <col class="col-name" />
            {hasKyc && <col class="col-kyc" />}
            <col class="col-flag" />
            <col class="col-flag" />
            <col class="col-visit" />
          </colgroup>

          <thead class="exchange-thead">
            <tr>
              <th scope="col">{t("exchanges:table.name")}</th>
              {hasKyc && <th scope="col">{t("exchanges:table.kyc")}</th>}
              <th scope="col">{t("exchanges:table.fiat")}</th>
              <th scope="col">{t("exchanges:table.crypto")}</th>
              <th scope="col" class="th-visit">
                {t("exchanges:table.visit")}
              </th>
            </tr>
          </thead>

          <tbody>
            {exchanges.map(async (ex) => {
              const highlightTags =
                [
                  ex.fiat && "fiat",
                  ex.crypto && "crypto",
                  ex.type === "decentralized" && "privacy",
                  ex.type === "aggregator" && "user-friendly",
                  ex.userFriendly && "user-friendly",
                ]
                  .filter(Boolean)
                  .join(" ") || undefined;

              const kycClass = ex.kycClass ?? "";
              const kycText = ex.kycReq ? t(`exchanges:kyc.${ex.kycReq}`) : "";
              const imgDimensions = await getPublicImageDimensions(ex.img);

              return (
                <tr class="exchange-row" data-highlight={highlightTags}>
                  <td class="with-icon" data-label={t("exchanges:table.name")}>
                    <Image
                      src={ex.img}
                      width={imgDimensions.width}
                      height={imgDimensions.height}
                      alt={ex.alt}
                      class="exchange-icon"
                      format="avif"
                      priority
                    />
                    <span class="exchange-name">{ex.name}</span>
                    <span class="exchange-description">
                      {t(`exchanges:descriptions.${ex.id}`)}
                    </span>
                  </td>

                  {hasKyc && (
                    <td
                      class={`pill ${kycClass}`}
                      data-label={t("exchanges:table.kyc")}
                    >
                      {kycText}
                    </td>
                  )}

                  <td
                    class={`pill ${ex.fiat ? "checkmark" : "cross"}`}
                    data-label={t("exchanges:table.fiat")}
                  >
                    <span aria-hidden="true">{ex.fiat ? "✓" : "✗"}</span>
                  </td>

                  <td
                    class={`pill ${ex.crypto ? "checkmark" : "cross"}`}
                    data-label={t("exchanges:table.crypto")}
                  >
                    <span aria-hidden="true">{ex.crypto ? "✓" : "✗"}</span>
                  </td>

                  <td
                    class="visit-cell"
                    data-label={t("exchanges:table.visit")}
                  >
                    <a
                      href={ex.url}
                      target="_blank"
                      rel="noopener noreferrer external"
                    >
                      {t("exchanges:table.visit")}
                    </a>
                  </td>
                </tr>
              );
            })}
          </tbody>
        </table>
      </div>
    )
  }

  <slot />
</section>

<style>
  .table-section {
    margin-bottom: 2rem;
  }

  .table-section .title {
    color: var(--heading-color);
    font-size: var(--font-size-xl);
    margin: 0 0 0.5rem 0;
  }

  .subtitle {
    color: var(--paragraph-subtitle);
    font-size: var(--font-size-sm);
    margin-bottom: 1rem;
  }

  .table-wrap {
    background: var(--card-color);
    border-radius: 8px;
    overflow: hidden;
  }

  .exchange-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
  }

  th,
  td {
    padding: 0.75rem;
    text-align: start;
    vertical-align: middle;
  }

  th {
    background: var(--card-hover-color);
    font-weight: var(--font-weight-semibold);
    color: var(--heading-color);
  }

  td {
    color: var(--text-primary);
  }

  .exchange-table tbody tr {
    box-shadow: inset 0 -1px 0 var(--border-color);
  }
  .exchange-table tbody tr:last-child {
    box-shadow: none;
  }

  .exchange-row {
    transition: background 0.15s ease;
  }

  .with-icon {
    display: grid;
    grid-template-columns: auto 1fr;
    grid-template-areas:
      "icon name"
      "icon desc";
    column-gap: 0.5rem;
    align-items: flex-start;
  }

  .exchange-icon {
    grid-area: icon;
    width: 3em;
    border-radius: 0.5rem;
    vertical-align: middle;
    flex-shrink: 0;
  }

  .exchange-name {
    grid-area: name;
    font-weight: var(--font-weight-semibold);
    color: var(--heading-color);
  }

  .exchange-description {
    grid-area: desc;
    color: var(--paragraph-subtitle);
    font-size: var(--font-size-sm);
    line-height: var(--line-height-caption);
    margin-top: 0.25rem;
  }

  .kyc-required {
    color: #f44336;
  }
  .kyc-optional {
    color: #ff9800;
  }
  .kyc-none,
  .checkmark {
    color: #4caf50;
  }
  .cross {
    color: var(--text-secondary);
  }

  .visit-cell a {
    font-weight: var(--font-weight-medium);
  }

  .th-visit {
    text-align: end;
  }

  @media (min-width: 901px) {
    .col-flag {
      width: 1%;
    }
    .col-visit {
      width: 1%;
    }

    .exchange-table :is(th, td):not(:first-child) {
      white-space: nowrap;
      text-align: center;
      padding-inline: 1.5rem;
    }

    .visit-cell {
      text-align: end;
    }
  }

  /* mobile cards */
  @media (max-width: 900px) {
    .table-wrap {
      background: transparent;
      border-radius: 0;
      overflow: visible;
    }

    .exchange-table {
      background: transparent;
    }

    /* hide header visually but keep it accessible */
    .exchange-thead {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border: 0;
    }

    .exchange-table tbody {
      display: block;
    }

    .exchange-row {
      display: flex;
      flex-wrap: wrap;
      padding: 0.75rem 0.9rem;
      margin-bottom: 0.75rem;
      border-radius: 0.75rem;
      background: var(--card-color);
      box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    }

    .exchange-description {
      margin-top: 0.5rem;
    }

    /* row separators are handled by cards now */
    .exchange-table tbody tr {
      box-shadow: none;
    }

    .exchange-row:last-child {
      margin-bottom: 0;
    }

    .exchange-row td:not(.pill) {
      padding: 0;
    }

    .exchange-row .with-icon {
      order: 0;
      flex: 1 1 100%;
      grid-template-areas:
        "icon name"
        "desc desc";
      margin-bottom: 0.5rem;
      column-gap: 0.75rem;
      align-items: center;
    }

    .exchange-row .exchange-icon {
      width: 2.5rem;
    }

    .pill {
      order: 1;
      flex: 0 0 auto;
      display: inline-flex;
      align-items: center;
      padding: 0.25rem 0.5rem;
      margin: 0 0.4rem 0.4rem 0;
      border-radius: 999px;
      font-size: var(--font-size-sm);
      background: var(--card-hover-color);
      line-height: 1;
      white-space: nowrap;
      gap: 0.35rem;
    }

    .pill::before {
      content: attr(data-label);
      text-transform: uppercase;
      letter-spacing: 0.06em;
      font-weight: var(--font-weight-medium);
      font-size: var(--font-size-xs);
      color: var(--paragraph-subtitle);
    }

    .visit-cell {
      order: 2;
      flex: 1 1 100%;
      margin-top: 0.25rem;
    }

    .visit-cell::before {
      content: "";
      display: block;
      margin-bottom: 1rem;
    }

    .visit-cell a {
      display: inline-flex;
      align-items: center;
      font-size: var(--font-size-sm);
    }
  }
</style>
