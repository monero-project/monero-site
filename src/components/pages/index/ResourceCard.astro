---
import { getDirection, getLocale } from "@/i18n/utils";

import MaskIcon from "@/components/ui/MaskIcon.astro";

import arrowRight from "@/assets/icons/mask/arrow-right.avif?url";
import externalLink from "@/assets/icons/mask/external-link.avif?url";

export interface Props {
  icon?: string;
  title: string;
  description?: string;
  ctaLabel?: string;
  ctaHref?: string;
}

const {
  icon = null,
  title,
  description = "",
  ctaLabel = "Learn more",
  ctaHref = "#",
} = Astro.props;
const dir = getDirection(getLocale(Astro.url));
---

<article class="resource-card">
  {
    icon && (
      <div class="icon">
        <MaskIcon src={icon} size="100%" />
      </div>
    )
  }

  <h2 class="title">{title}</h2>

  {description && <p class="desc">{description}</p>}

  <a class="cta" href={ctaHref}>
    {ctaLabel}
    <MaskIcon
      src={ctaHref.startsWith("http") ? externalLink : arrowRight}
      rtl={dir == "rtl"}
    />
  </a>
</article>

<style>
  @media (prefers-color-scheme: light) {
    .icon {
      background: var(--card-color);
    }
  }

  .resource-card {
    border: 1px solid var(--border-color);
    border-radius: 1rem;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  .icon {
    width: 3rem;
    height: 3rem;
    border: 1px solid var(--border-color);
    border-radius: 50%;
    display: grid;
    place-items: center;
    margin: 1rem 0 1.6rem 0;
    padding: 1.5rem;
    color: var(--monero-orange);
  }

  .icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .title {
    margin: 0 0 0.8rem;
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: var(--heading-color);
  }

  .desc {
    margin: 0 0 1.5rem;
    line-height: var(--line-height-body);
    max-width: 45ch;
    color: var(--paragraph-subtitle);
  }

  .cta {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-weight: var(--font-weight-bold);
    color: var(--monero-orange);
    text-decoration: none;
    margin-top: auto;
  }

  .cta:hover {
    text-decoration: underline;
  }

  .arrow {
    width: 1rem;
    height: 1rem;
  }
</style>
