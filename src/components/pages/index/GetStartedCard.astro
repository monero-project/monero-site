---
import MaskIcon from "@/components/ui/MaskIcon.astro";

import arrowRight from "@/assets/icons/mask/arrow-right.avif";

export interface Props {
  step: string | number;
  title: string;
  description?: string;
  ctaHref?: string;
  ctaLabel: string;
}

const { step, title, description = "", ctaHref = "#", ctaLabel } = Astro.props;

const { dir, localizeNumber, localizeHref } = Astro.locals;
---

<article class="gs">
  <div class="num" aria-hidden="true">
    {localizeNumber(Number(step), 2)}
  </div>

  <div class="text">
    <h2 class="title">{title}</h2>
    {description && <p class="desc">{description}</p>}
    <a class="cta" href={localizeHref(ctaHref)} target="_blank">
      {ctaLabel}
      <MaskIcon src={arrowRight} rtl={dir == "rtl"} size="1em" />
    </a>
  </div>
</article>

<style>
  :root {
    --num-color: light-dark(var(--monero-orange), var(--border-color));
  }
  .gs {
    display: flex;
    align-items: center;
    gap: var(--space-2xl);
    padding: 1.5rem 0;
  }

  .num {
    font-weight: var(--font-weight-semibold);
    font-size: 6.5rem;
    line-height: 1;
    color: var(--num-color);
    width: 2ch;
  }

  .text {
    flex: 1;
  }

  .title {
    margin: 0 0 var(--space-xs);
    font-weight: var(--font-weight-extra-bold);
    font-size: var(--font-size-2xl);
    color: var(--heading-color);
  }

  .desc {
    margin: 0 0 var(--space-md);
    color: var(--paragraph-subtitle);
    max-width: 60ch;
    line-height: var(--line-height-body);
  }

  .cta {
    display: inline-flex;
    align-items: center;
    gap: 0.25em;
    font-weight: var(--font-weight-bold);
    color: var(--monero-orange);
    text-decoration: none;
  }

  .cta:hover {
    text-decoration: underline;
  }

  @media (max-width: 600px) {
    .gs {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-lg);
    }
    .num {
      font-size: 4.5rem;
    }
  }
</style>
