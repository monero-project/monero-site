---
import Button from "@/components/ui/Button.astro";
import MaskIcon from "@/components/ui/icons/MaskIcon.astro";
import { icons } from "@/utils/icons";

const { class: className, ...rest } = Astro.props;
const { t, localizeHref } = Astro.locals;
---

<div class:list={["hero", className]} aria-labelledby="hero-title" {...rest}>
  <div class="background-logo" aria-hidden="true">
    <div class="logo-box">
      <div class="mask-icon">
        <MaskIcon src={icons.mask("monerooutline")} size="100%" />
      </div>
      <div class="inner-circle"></div>
    </div>
  </div>

  <div class="wrap">
    <h1 id="hero-title" class="title">
      <span class="accent">{t("index:hero.titleMonero")}</span><br />
      <span class="plain">{t("index:hero.titleMeans")}</span>
      <span class="accent">{t("index:hero.titleMoney")}</span>
    </h1>

    <p class="lead">
      {t("index:hero.lead")}
    </p>

    <div class="actions">
      <Button variant="primary" class="hero-button" href="#start-using-monero"
        >{t("index:hero.getStarted")}</Button
      >
      <Button
        variant="secondary"
        class="hero-button"
        href={localizeHref("/get-started/what-is-monero/")}
        >{t("index:hero.aboutMonero")}</Button
      >
    </div>
  </div>
</div>

<style>
  /* ===== Hero ===== */
  .hero {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .wrap {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    text-align: center;
    margin-inline: auto;
    position: relative;
  }

  /* Title scales smoothly from phones to desktop */
  .title {
    margin: 0 0 var(--space-sm);
    font-weight: var(--font-weight-extra-bold);
    letter-spacing: -0.015em;
    line-height: var(--line-height-title);
    font-size: var(--font-size-5xl);
  }

  .accent {
    color: var(--monero-orange);
  }

  .lead {
    margin: 0 auto var(--space-xl);
    max-width: 50ch;
    line-height: var(--line-height-body);
    font-size: var(--font-size-xl);
    color: var(--paragraph-main);
    opacity: 0.9;
  }

  .actions {
    display: flex;
    gap: var(--space-xl);
    justify-content: center;
    align-items: center;
    margin-top: var(--space-xs);
    max-width: 100%;

    .hero-button {
      padding: 1em 2em;
    }
  }

  @media (width <= 600px) {
    .actions {
      flex-direction: column;
      gap: var(--space-sm);

      .hero-button {
        width: 100%;
      }
    }
  }

  .background-logo {
    position: absolute;
    inset: 0;
    display: grid;
    place-items: center;
    pointer-events: none;
    container-type: size;
  }

  .logo-box {
    inline-size: min(100cqw, 100cqh);
    aspect-ratio: 1 / 1;
    position: relative;
  }

  @supports not (width: 100cqw) {
    .logo-box {
      inline-size: min(90vmin, 100%);
      aspect-ratio: 1 / 1;
    }
  }

  .mask-icon {
    position: absolute;
    inset: 0;
    opacity: 0.3;
  }

  .inner-circle {
    position: absolute;
    inset: 10%;
    border-radius: 50%;
    box-shadow: inset 0 0 30px #dc4e2e80;
  }
</style>
