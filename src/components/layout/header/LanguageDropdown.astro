---
import { locales } from "@/i18n/config";
import { getLocaleName, localizeHref } from "@/i18n/utils";
import { getLocale } from "astro-i18n-aut";

import MaskIcon from "@/components/ui/MaskIcon.astro";

import Globe from "@/assets/icons/mask/globe.avif";

const currentLocale = getLocale(Astro.url);

const localeList = Object.keys(locales).map((code) => {
  const { name = code } = getLocaleName(code) ?? {};
  return { code, name };
});
---

<details class="lang-container">
  <summary
    class="lang"
    aria-label="Change language"
    aria-haspopup="true"
    role="button"
  >
    <MaskIcon src={Globe} size="1.25rem" />
  </summary>

  <div class="lang-dropdown" aria-label="Languages">
    <ul class="lang-list">
      {
        localeList.map((locale) => (
          <li>
            <a
              href={localizeHref(locale.code, Astro.url.pathname)}
              class={locale.code === currentLocale ? "active" : ""}
              aria-current={locale.code === currentLocale ? "true" : undefined}
            >
              {locale.name}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</details>

<style>
  .lang-container {
    position: static;
    display: inline-block;
  }

  .lang-container > summary {
    list-style: none;
  }
  .lang-container > summary::marker,
  .lang-container > summary::-webkit-details-marker {
    display: none;
  }

  .lang {
    margin-inline-start: auto;
    display: inline-flex;
    align-items: center;
    cursor: pointer;
    padding: 0.5rem 0;
    border: 0;
    background: transparent;
    vertical-align: middle;
    color: inherit;
  }
  .lang:hover,
  .lang:focus-visible {
    color: var(--heading-color);
  }

  /* Panel (hidden by default) */
  .lang-dropdown {
    position: absolute;
    inset-inline: 0;
    inset-block-start: 100%;

    background: var(--card-color);
    box-shadow: 0 4px 2px -2px rgba(0, 0, 0, 0.2);
    border-radius: 0 0 0.5rem 0.5rem;

    z-index: 999;
    padding-inline: clamp(1rem, 4vw, 4rem);
    padding-block: 0 1rem;
    user-select: none;

    max-height: 75dvh;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;

    visibility: hidden;
    pointer-events: none;
    transform: translateY(-10px);
    transition: transform 0.2s ease;
  }

  /* Items */
  .lang-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .lang-list li {
    margin: 0;
  }

  .lang-list a {
    display: block;
    padding: 0.75rem; /* larger tap targets */
    color: var(--heading-color);
    text-decoration: none;
    border-radius: 0.5rem;
  }

  .lang-list a:hover,
  .lang-list a:focus {
    background: var(--card-hover-color);
  }

  .lang-list a.active {
    font-weight: var(--font-weight-semibold);
    background: var(--card-hover-color);
  }

  .lang-container[open] .lang-dropdown {
    visibility: visible;
    pointer-events: auto;
    transform: translateY(0);
  }
  .lang-container[open] .lang {
    color: var(--heading-color);
  }

  @media (min-width: 1200px) and (hover: hover) {
    .lang-container {
      position: relative;
    }

    .lang {
      padding: 0;
    }

    .lang-dropdown {
      inset-inline: auto;
      inset-inline-end: 0;
      inset-block-start: 100%;

      margin-top: 0.5rem;
      padding: 0.75rem;
      min-width: 140px;

      border-radius: 0.75rem;
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.35);

      max-height: none;
      overflow: visible;
    }

    .lang-list a {
      padding: 0.5rem 0.75rem;
    }
  }
</style>
