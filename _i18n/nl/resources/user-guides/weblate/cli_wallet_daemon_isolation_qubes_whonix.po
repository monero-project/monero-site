#: ../_i18n/en/resources/user-guides/cli_wallet_daemon_isolation_qubes_whonix.md:17
#, no-wrap
msgid "2. In the AppVM `monerod-ws`:"
msgstr "2. In de AppVM `monerod-ws`:"

#. type: Bullet: '+ '
#: ../_i18n/en/resources/user-guides/cli_wallet_daemon_isolation_qubes_whonix.md:20
msgid "Create a `systemd` file."
msgstr "Maak een `systemd`-bestand."

#. type: Fenced code block
#: ../_i18n/en/resources/user-guides/cli_wallet_daemon_isolation_qubes_whonix.md:21
#, no-wrap
msgid "user@host:~$ sudo nano /home/user/monerod.service\n"
msgstr "user@host:~$ sudo gedit /home/user/monerod.service\n"

#. type: Plain text
#: ../_i18n/en/resources/user-guides/cli_wallet_daemon_isolation_qubes_whonix.md:26
msgid "Paste the following contents:"
msgstr "Plak de volgende gegevens:"

#. type: Fenced code block
#: ../_i18n/en/resources/user-guides/cli_wallet_daemon_isolation_qubes_whonix.md:27
#, no-wrap
msgid ""
"[Unit]\n"
"Description=Monero Full Node\n"
"After=network.target\n"
"\n"
"[Service]\n"
"User=user\n"
"Group=user\n"
"\n"
"Type=forking\n"
"PIDFile=/home/user/.bitmonero/monerod.pid\n"
"\n"
"ExecStart=/usr/bin/monerod --detach --data-dir=/home/user/.bitmonero \\\n"
"    --no-igd --pidfile=/home/user/.bitmonero/monerod.pid \\\n"
"    --log-file=/home/user/.bitmonero/bitmonero.log --p2p-bind-ip=127.0.0.1\n"
"\n"
"Restart=always\n"
"PrivateTmp=true\n"
"\n"
"[Install]\n"
"WantedBy=multi-user.target\n"
msgstr ""

#. type: Bullet: '+ '
#: ../_i18n/en/resources/user-guides/cli_wallet_daemon_isolation_qubes_whonix.md:51
msgid "Make `monerod` daemon run on startup by editing the file `/rw/config/rc.local`."
msgstr "Zorg dat de daemon `monerod` wordt uitgevoerd bij het opstarten door het bestand `/rw/config/rc.local` te bewerken."

#. type: Fenced code block
#: ../_i18n/en/resources/user-guides/cli_wallet_daemon_isolation_qubes_whonix.md:52
#: ../_i18n/en/resources/user-guides/cli_wallet_daemon_isolation_qubes_whonix.md:88
#, no-wrap
msgid "user@host:~$ sudo nano /rw/config/rc.local\n"
msgstr "user@host:~$ sudo gedit /rw/config/rc.local\n"

#. type: Plain text
#: ../_i18n/en/resources/user-guides/cli_wallet_daemon_isolation_qubes_whonix.md:57
msgid "Add these lines to the bottom:"
msgstr "Voeg onderaan deze regels toe:"

